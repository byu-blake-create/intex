<%- include('partials/header') %>

<section class="hero hero--contact">
  <div class="container">
    <h1><%= t('contact.title') %></h1>
    <p><%= t('contact.lede') %></p>
  </div>
</section>

<section class="container container-sm" style="margin-top: 2rem; margin-bottom: 3rem;">
  <% if (status) { %>
    <div class="alert <%= status.success ? 'alert-success' : 'alert-error' %>" role="alert" aria-live="polite">
      <%= status.message %>
    </div>
  <% } %>

  <div class="card">
    <div class="card-title"><%= t('contact.title') %></div>
    <p class="card-text"><%= t('contact.lede') %></p>

    <form action="/contact" method="POST" id="contactForm" novalidate aria-label="Contact form">
      <div class="form-group">
        <label for="topic" class="form-label"><%= t('contact.topic.label') %></label>
        <select id="topic" name="topic" class="form-select" required>
          <option value="" disabled <%= !formData.topic ? 'selected' : '' %>>Select an option</option>
          <option value="I’d like to participate with Ella Rises" <%= formData.topic === "I’d like to participate with Ella Rises" ? 'selected' : '' %>><%= t('contact.topic.participate') %></option>
          <option value="I’d like to volunteer with Ella Rises" <%= formData.topic === "I’d like to volunteer with Ella Rises" ? 'selected' : '' %>><%= t('contact.topic.volunteer') %></option>
          <option value="I’d like to support Ella Rises" <%= formData.topic === "I’d like to support Ella Rises" ? 'selected' : '' %>><%= t('contact.topic.support') %></option>
        </select>
      </div>

      <div class="grid grid-2">
        <div class="form-group">
          <label for="firstName" class="form-label"><%= t('contact.first') %></label>
          <input
            type="text"
            id="firstName"
            name="firstName"
            class="form-input"
            value="<%= formData.firstName || '' %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="lastName" class="form-label"><%= t('contact.last') %></label>
          <input
            type="text"
            id="lastName"
            name="lastName"
            class="form-input"
            value="<%= formData.lastName || '' %>"
            required
          />
        </div>
      </div>

      <div class="grid grid-2">
        <div class="form-group">
          <label for="email" class="form-label"><%= t('contact.email') %></label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-input"
            value="<%= formData.email || '' %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="phone" class="form-label"><%= t('contact.phone') %></label>
          <input
            type="tel"
            id="phone"
            name="phone"
            class="form-input"
            value="<%= formData.phone || '' %>"
            placeholder="(123) 456-7890"
          />
          <p class="form-success" style="margin-top: 0.35rem;"><%= t('contact.phone.note') %></p>
        </div>
      </div>

      <div class="form-group">
        <label for="message" class="form-label"><%= t('contact.message') %></label>
        <textarea
          id="message"
          name="message"
          class="form-textarea"
          required
        ><%= formData.message || '' %></textarea>
      </div>

      <button type="submit" class="btn btn-primary btn-lg btn-block" id="contactSubmit">
        <%= t('contact.submit') %>
      </button>
    </form>
  </div>
</section>

<%- include('partials/footer') %>
