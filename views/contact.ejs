<%- include('partials/header') %>

<section class="hero">
  <div class="container">
    <h1>Contact Us</h1>
    <p>Tell us how you want to engage with Ella Rises and we’ll get back to you.</p>
  </div>
</section>

<section class="container container-sm" style="margin-top: 2rem; margin-bottom: 3rem;">
  <% if (status) { %>
    <div class="alert <%= status.success ? 'alert-success' : 'alert-error' %>">
      <%= status.message %>
    </div>
  <% } %>

  <div class="card">
    <div class="card-title">We would love to hear from you</div>
    <p class="card-text">Share a little about how you’d like to connect and we’ll respond soon.</p>

    <form action="/contact" method="POST" id="contactForm" novalidate>
      <div class="form-group">
        <label for="topic" class="form-label">I’d like to...</label>
        <select id="topic" name="topic" class="form-select" required>
          <option value="" disabled <%= !formData.topic ? 'selected' : '' %>>Select an option</option>
          <option value="I’d like to participate with Ella Rises" <%= formData.topic === "I’d like to participate with Ella Rises" ? 'selected' : '' %>>I’d like to participate with Ella Rises</option>
          <option value="I’d like to volunteer with Ella Rises" <%= formData.topic === "I’d like to volunteer with Ella Rises" ? 'selected' : '' %>>I’d like to volunteer with Ella Rises</option>
          <option value="I’d like to support Ella Rises" <%= formData.topic === "I’d like to support Ella Rises" ? 'selected' : '' %>>I’d like to support Ella Rises</option>
        </select>
      </div>

      <div class="grid grid-2">
        <div class="form-group">
          <label for="firstName" class="form-label">First Name</label>
          <input
            type="text"
            id="firstName"
            name="firstName"
            class="form-input"
            value="<%= formData.firstName || '' %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="lastName" class="form-label">Last Name</label>
          <input
            type="text"
            id="lastName"
            name="lastName"
            class="form-input"
            value="<%= formData.lastName || '' %>"
            required
          />
        </div>
      </div>

      <div class="grid grid-2">
        <div class="form-group">
          <label for="email" class="form-label">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-input"
            value="<%= formData.email || '' %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="phone" class="form-label">Phone (optional)</label>
          <input
            type="tel"
            id="phone"
            name="phone"
            class="form-input"
            value="<%= formData.phone || '' %>"
            placeholder="(123) 456-7890"
          />
          <p class="form-success" style="margin-top: 0.35rem;">Enter your phone if you’d like text reminders.</p>
        </div>
      </div>

      <div class="form-group">
        <label for="message" class="form-label">How can we help?</label>
        <textarea
          id="message"
          name="message"
          class="form-textarea"
          required
        ><%= formData.message || '' %></textarea>
      </div>

      <button type="submit" class="btn btn-primary btn-lg btn-block" id="contactSubmit">
        Send Message
      </button>
    </form>
  </div>
</section>

<%- include('partials/footer') %>
