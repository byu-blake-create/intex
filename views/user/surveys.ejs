<%- include('../partials/header') %>

<div class="container" style="margin-top: 3rem; margin-bottom: 4rem;">
  <h1>My Survey History</h1>
  <p>Here is a history of your submitted surveys.</p>

  <% if (surveys && surveys.length > 0) { %>
    <table class="table">
      <thead>
        <tr>
          <th>Event</th>
          <th>Submission Date</th>
          <th>Overall Score</th>
          <th>Comments</th>
        </tr>
      </thead>
      <tbody>
        <% surveys.forEach(survey => { %>
          <tr>
            <td><%= survey.event_title %></td>
            <td><%= new Date(survey.survey_submission_date).toLocaleDateString() %></td>
            <td><%= survey.survey_overall_score %></td>
            <td><%= survey.survey_comments || '' %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <p>You have not submitted any surveys yet.</p>
  <% } %>
</div>

<%- include('../partials/footer') %>
