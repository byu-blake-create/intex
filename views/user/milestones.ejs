<%- include('../partials/header') %>

<style>
  .timeline {
    position: relative;
    padding: 2rem 0;
    list-style: none;
  }
  .timeline::before {
    content: '';
    position: absolute;
    top: 0;
    left: 40px;
    height: 100%;
    width: 4px;
    background: var(--border-color);
  }
  .timeline-item {
    position: relative;
    margin-bottom: 2rem;
    padding-left: 80px;
  }
  .timeline-icon {
    position: absolute;
    left: 22px;
    top: 0;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: var(--sage-soft);
    color: var(--primary-color);
    font-size: 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .timeline-content {
    background: var(--card-bg);
    padding: 1.5rem;
    border-radius: var(--border-radius);
    border: 1px solid var(--border-color);
  }
</style>

<div class="container watercolor-right" style="margin-top: 3rem; margin-bottom: 4rem;">
  <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem; flex-wrap: wrap;">
    <div>
      <h1 style="font-size: 2.5rem; margin-bottom: 0.5rem;"><%= t('user.milestones.title') %></h1>
      <p style="font-size: 1.1rem; color: var(--text-secondary);">
        Hello, <%= user.name %>! <%= t('user.milestones.copy') %>
      </p>
    </div>
    <button onclick="document.getElementById('add-milestone-form').style.display='block'" class="btn btn-primary">
      <%= t('user.milestones.add') %>
    </button>
  </div>

  <!-- Add Milestone Form (hidden by default) -->
  <div id="add-milestone-form" class="card" style="display: none; margin-bottom: 3rem;">
    <h3 style="margin-bottom: 1.5rem;"><%= t('user.milestones.addTitle') %></h3>
    <form action="/user/milestones" method="POST">
      <div class="form-group">
        <label for="milestone_category" class="form-label"><%= t('user.milestones.category') %></label>
        <input type="text" id="milestone_category" name="milestone_category" class="form-input" placeholder="e.g., Education, Career, Personal" required>
      </div>

      <div class="form-group">
        <label for="milestone_title" class="form-label">
          <span id="title-label"><%= t('user.milestones.titleLabel') %></span>
        </label>
        <input
          type="text"
          id="milestone_title"
          name="milestone_title"
          class="form-input"
          placeholder="<%= t('user.milestones.placeholder') %>"
          required
          maxlength="255"
        />
      </div>

      <div class="form-group">
        <label for="milestone_date" class="form-label">
          <%= t('user.milestones.date') %>
          <span style="color: var(--text-secondary); font-size: 0.9rem; font-weight: normal;">
            <%= t('user.milestones.dateHint') %>
          </span>
        </label>
        <input
          type="date"
          id="milestone_date"
          name="milestone_date"
          class="form-input"
          value="<%= new Date().toISOString().split('T')[0] %>"
        />
      </div>

      <div style="display: flex; gap: 1rem; margin-top: 2rem;">
        <button type="submit" class="btn btn-primary"><%= t('user.milestones.submit') %></button>
        <button type="button" onclick="document.getElementById('add-milestone-form').style.display='none'" class="btn btn-outline"><%= t('user.milestones.cancel') %></button>
      </div>
    </form>
  </div>

  <!-- Success/Error Messages -->
  <% if (req.query && req.query.success) { %>
    <div class="alert alert-success" style="margin-bottom: 2rem;">
      <%= t('user.milestones.success') %>
    </div>
  <% } %>
  <% if (req.query && req.query.error) { %>
    <div class="alert alert-error" style="margin-bottom: 2rem;">
      <%= t('user.milestones.error') %>
    </div>
  <% } %>

  <!-- Milestones Display -->
  <% if (milestones && milestones.length > 0) { %>
    <h2 style="font-size: 1.8rem; margin-bottom: 2rem; color: var(--text-color); border-bottom: 2px solid var(--border-color); padding-bottom: 0.5rem;">Timeline</h2>
    <ul class="timeline">
      <% milestones.forEach(milestone => { %>
        <li class="timeline-item">
          <div class="timeline-icon">
            <% const category = milestone.milestone_category || ''; %>
            <% if (category.toLowerCase().includes('education')) { %>
              üéì
            <% } else if (category.toLowerCase().includes('career')) { %>
              üíº
            <% } else if (category.toLowerCase().includes('personal')) { %>
              ‚≠ê
            <% } else { %>
              üèÜ
            <% } %>
          </div>
          <div class="timeline-content">
            <div style="display: flex; justify-content: space-between; align-items: flex-start;">
              <div>
                <span class="badge badge-primary" style="margin-bottom: 0.75rem;"><%= milestone.milestone_category %></span>
                <h3 style="margin: 0; font-size: 1.2rem; color: var(--primary-color);"><%= milestone.milestone_title %></h3>
              </div>
              <div style="color: var(--text-secondary); font-size: 0.9rem; text-align: right;">
                <strong><%= new Date(milestone.milestone_date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></strong>
              </div>
            </div>
          </div>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <div class="card text-center" style="padding: 4rem 2rem;">
      <div style="font-size: 4rem; margin-bottom: 1rem;">üéØ</div>
      <h3 style="color: var(--text-secondary); margin-bottom: 1rem;"><%= t('user.milestones.empty.title') %></h3>
      <p style="color: var(--text-light); margin-bottom: 2rem;">
        <%= t('user.milestones.empty.copy') %>
      </p>
    </div>
  <% } %>
</div>

<%- include('../partials/footer') %>
