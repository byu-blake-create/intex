<%- include('../partials/header') %>

<div class="container watercolor-right" style="margin-top: 3rem; margin-bottom: 4rem;">
  <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
    <div>
      <h1 style="font-size: 2.5rem; margin-bottom: 0.5rem;"><%= t('user.milestones.title') %></h1>
      <p style="font-size: 1.1rem; color: var(--text-secondary);">
        <%= t('user.milestones.copy') %>
      </p>
    </div>
    <button onclick="document.getElementById('add-milestone-form').style.display='block'" class="btn btn-primary">
      <%= t('user.milestones.add') %>
    </button>
  </div>

  <!-- Add Milestone Form (hidden by default) -->
  <div id="add-milestone-form" class="card" style="display: none; margin-bottom: 3rem;">
    <h3 style="margin-bottom: 1.5rem;"><%= t('user.milestones.addTitle') %></h3>
    <form action="/user/milestones" method="POST">
      <div class="form-group">
        <label for="milestone_id" class="form-label"><%= t('user.milestones.category') %></label>
        <select id="milestone_id" name="milestone_id" class="form-select" required onchange="toggleCustomTitle()">
          <option value=""><%= t('user.milestones.categoryPlaceholder') %></option>
          <% categories.forEach(category => { %>
            <option value="<%= category.id %>"><%= category.title %></option>
          <% }) %>
        </select>
      </div>

      <div class="form-group">
        <label for="custom_title" class="form-label">
          <span id="title-label"><%= t('user.milestones.titleLabel') %></span>
          <span style="color: var(--text-secondary); font-size: 0.9rem; font-weight: normal;">
            <%= t('user.milestones.titleHint') %>
          </span>
        </label>
        <input
          type="text"
          id="custom_title"
          name="custom_title"
          class="form-input"
          placeholder="<%= t('user.milestones.placeholder') %>"
          required
          maxlength="255"
        />
      </div>

      <div class="form-group">
        <label for="achieved_date" class="form-label">
          <%= t('user.milestones.date') %>
          <span style="color: var(--text-secondary); font-size: 0.9rem; font-weight: normal;">
            <%= t('user.milestones.dateHint') %>
          </span>
        </label>
        <input
          type="date"
          id="achieved_date"
          name="achieved_date"
          class="form-input"
          value="<%= new Date().toISOString().split('T')[0] %>"
        />
      </div>

      <div style="display: flex; gap: 1rem; margin-top: 2rem;">
        <button type="submit" class="btn btn-primary"><%= t('user.milestones.submit') %></button>
        <button type="button" onclick="document.getElementById('add-milestone-form').style.display='none'" class="btn btn-outline"><%= t('user.milestones.cancel') %></button>
      </div>
    </form>
  </div>

  <!-- Success/Error Messages -->
  <% if (typeof query !== 'undefined' && query.success) { %>
    <div style="background-color: #d4edda; color: #155724; padding: 1rem; border-radius: var(--border-radius); margin-bottom: 2rem; border: 1px solid #c3e6cb;">
      <%= t('user.milestones.success') %>
    </div>
  <% } %>
  <% if (typeof query !== 'undefined' && query.error) { %>
    <div style="background-color: #f8d7da; color: #721c24; padding: 1rem; border-radius: var(--border-radius); margin-bottom: 2rem; border: 1px solid #f5c6cb;">
      <%= t('user.milestones.error') %>
    </div>
  <% } %>

  <!-- Milestones Display -->
  <% if (milestones && milestones.length > 0) { %>
    <div class="grid grid-3">
      <% milestones.forEach(milestone => { %>
        <div class="card" style="text-align: center;">
          <!-- Badge Icon -->
          <div style="font-size: 4rem; margin-bottom: 1rem;">
            <% const displayTitle = milestone.title || milestone.custom_title || ''; %>
            <% if (displayTitle.includes('College') || displayTitle.includes('Grad School')) { %>
              üéì
            <% } else if (displayTitle.includes('High School')) { %>
              üìö
            <% } else if (displayTitle.includes('Job') || displayTitle.includes('Internship')) { %>
              üíº
            <% } else if (displayTitle.includes('Degree')) { %>
              üèÖ
            <% } else if (displayTitle.includes('Certificate')) { %>
              üìú
            <% } else if (displayTitle.includes('Award')) { %>
              üèÜ
            <% } else { %>
              ‚≠ê
            <% } %>
          </div>

          <!-- Milestone Category or Title -->
          <% if (milestone.title) { %>
            <span class="badge badge-primary" style="margin-bottom: 1rem;">
              <%= milestone.title %>
            </span>
            <!-- Custom Title -->
            <h3 class="card-title" style="margin-bottom: 1rem; min-height: 3rem;">
              <%= milestone.custom_title || milestone.description %>
            </h3>
          <% } else { %>
            <!-- Show custom_title as main title when no category -->
            <h3 class="card-title" style="margin-bottom: 1rem; min-height: 3rem;">
              <%= milestone.custom_title %>
            </h3>
          <% } %>

          <!-- Date Achieved -->
          <div style="padding-top: 1rem; border-top: 1px solid var(--border-color);">
            <p style="color: var(--text-secondary); font-size: 0.9rem;">
              <%= t('user.milestones.achievedOn') %><br>
              <strong><%= new Date(milestone.achieved_at).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></strong>
            </p>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <div class="card text-center" style="padding: 4rem 2rem;">
      <div style="font-size: 4rem; margin-bottom: 1rem;">üéØ</div>
      <h3 style="color: var(--text-secondary); margin-bottom: 1rem;"><%= t('user.milestones.empty.title') %></h3>
      <p style="color: var(--text-light); margin-bottom: 2rem;">
        <%= t('user.milestones.empty.copy') %>
      </p>
    </div>
  <% } %>
</div>

<script>
function toggleCustomTitle() {
  const select = document.getElementById('milestone_id');
  const label = document.getElementById('title-label');
  const selectedOption = select.options[select.selectedIndex];

  if (selectedOption.text === 'Other') {
    label.textContent = '<%= t('user.milestones.titleCustom') %>';
  } else {
    label.textContent = '<%= t('user.milestones.titleLabel') %>';
  }
}
</script>

<%- include('../partials/footer') %>
