<%- include('partials/header') %>

<!-- Hero Section -->
<section class="hero watercolor-rose">
  <div class="container">
    <h1><%= t('home.hero.title') %></h1>
    <p><%= t('home.hero.subtitle') %></p>
    <div>
      <a href="/events" class="btn btn-lg btn-primary"><%= t('home.hero.btn.events') %></a>
      <a
        href="https://givebutter.com/EllaRises"
        target="_blank"
        class="btn btn-lg btn-contrast"
        ><%= t('home.hero.btn.donate') %></a
      >
    </div>
  </div>
</section>

<!-- Mission Section -->
<section class="container mt-4">
  <div class="text-center mb-4">
    <h2 style="font-size: 2.5rem; margin-bottom: 1rem"><%= t('home.mission.heading') %></h2>
    <p
      style="
        font-size: 1.2rem;
        color: var(--text-secondary);
        max-width: 800px;
        margin: 0 auto;
      "
    >
      <%= t('home.mission.body') %>
    </p>
  </div>

  <!-- Feature Cards -->
  <div class="grid grid-3 mt-4">
    <div class="card image-card">
      <div
        class="card-media"
        style="
          background-image: url('/images/photos/ER%20STEM%20Workshop%20Aug%202022-09.jpg');
        "
      ></div>
      <div class="card-content text-center">
        <h3 class="card-title"><%= t('home.feature.education.title') %></h3>
        <p class="card-text"><%= t('home.feature.education.body') %></p>
      </div>
    </div>

    <div class="card image-card">
      <div
        class="card-media"
        style="
          background-image: url('/images/photos/118ed8_5b9c448663b34612b68d5ec2913ad46b~mv2.jpg');
          background-position: center 25%;
          background-size: 100%;
        "
      ></div>
      <div class="card-content text-center">
        <h3 class="card-title"><%= t('home.feature.community.title') %></h3>
        <p class="card-text"><%= t('home.feature.community.body') %></p>
      </div>
    </div>

    <div class="card image-card">
      <div
        class="card-media"
        style="background-image: url('/images/photos/BF_Single_RedDress.png')"
      ></div>
      <div class="card-content text-center">
        <h3 class="card-title"><%= t('home.feature.empowerment.title') %></h3>
        <p class="card-text"><%= t('home.feature.empowerment.body') %></p>
      </div>
    </div>
  </div>
</section>

<!-- Events Preview -->
<section class="container mt-4">
  <h2 style="font-size: 2rem; margin-bottom: 2rem; text-align: center">
    <%= t('home.events.heading') %>
  </h2>
  <p class="text-center mb-4">
    <%= t('home.events.copy') %>
    <a href="/events" style="color: #ce325b; font-weight: 600">
      <%= t('home.events.link') %>
    </a>
  </p>
</section>

<!-- Call to Action -->
<section
  class="watercolor-sand"
  style="
    background-color: var(--bg-accent);
    padding: 4rem 2rem;
    margin-top: 4rem;
  "
>
  <div class="container text-center">
    <h2 style="font-size: 2.5rem; margin-bottom: 1rem">
      <%= t('home.cta.heading') %>
    </h2>
    <p
      style="font-size: 1.2rem; color: var(--text-primary); margin-bottom: 2rem"
    >
      <%= t('home.cta.body') %>
    </p>
    <div>
      <% if (!isLoggedIn) { %>
      <a href="/signup" class="btn btn-lg btn-primary"><%= t('home.cta.btn.signup') %></a>
      <a href="/login" class="btn btn-lg btn-contrast"><%= t('home.cta.btn.login') %></a>
      <% } else { %>
      <a href="/events" class="btn btn-lg btn-primary"><%= t('home.cta.btn.events') %></a>
      <a href="/user/dashboard" class="btn btn-lg btn-secondary"
        ><%= t('home.cta.btn.dashboard') %></a
      >
      <% } %>
    </div>
  </div>
</section>

<%- include('partials/footer') %>
