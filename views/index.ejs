<%- include('partials/header') %>

<!-- Hero Section -->
<section class="hero watercolor-rose">
  <div class="container">
    <h1>Welcome to Ella Rises</h1>
    <p>Empowering women, building community, creating lasting change</p>
    <div>
      <a href="/events" class="btn btn-lg btn-primary">View Upcoming Events</a>
      <a
        href="https://givebutter.com/EllaRises"
        target="_blank"
        class="btn btn-lg btn-contrast"
        >Make a Donation</a
      >
    </div>
  </div>
</section>

<!-- Mission Section -->
<section class="container mt-4">
  <div class="text-center mb-4">
    <h2 style="font-size: 2.5rem; margin-bottom: 1rem">Our Mission</h2>
    <p
      style="
        font-size: 1.2rem;
        color: var(--text-secondary);
        max-width: 800px;
        margin: 0 auto;
      "
    >
      Ella Rises is dedicated to empowering women through education, community
      support, and meaningful programs that create lasting positive change in
      our community.
    </p>
  </div>

  <!-- Feature Cards -->
  <div class="grid grid-3 mt-4">
    <div class="card image-card">
      <div
        class="card-media"
        style="
          background-image: url('/images/photos/ER%20STEM%20Workshop%20Aug%202022-09.jpg');
        "
      ></div>
      <div class="card-content text-center">
        <h3 class="card-title">Education</h3>
        <p class="card-text">
          Providing educational opportunities and resources to help women grow
          personally and professionally.
        </p>
      </div>
    </div>

    <div class="card image-card">
      <div
        class="card-media"
        style="
          background-image: url('/images/photos/118ed8_5b9c448663b34612b68d5ec2913ad46b~mv2.jpg');
          background-position: center 25%;
          background-size: 100%;
        "
      ></div>
      <div class="card-content text-center">
        <h3 class="card-title">Community</h3>
        <p class="card-text">
          Building a supportive network where women can connect, share
          experiences, and lift each other up.
        </p>
      </div>
    </div>

    <div class="card image-card">
      <div
        class="card-media"
        style="background-image: url('/images/photos/BF_Single_RedDress.png')"
      ></div>
      <div class="card-content text-center">
        <h3 class="card-title">Empowerment</h3>
        <p class="card-text">
          Creating opportunities for women to develop skills, confidence, and
          leadership abilities.
        </p>
      </div>
    </div>
  </div>
</section>

<!-- Events Preview -->
<section class="container mt-4">
  <h2 style="font-size: 2rem; margin-bottom: 2rem; text-align: center">
    Upcoming Events
  </h2>
  <p class="text-center mb-4">
    Join us for workshops, support groups, and community events.
    <a href="/events" style="color: #ce325b; font-weight: 600"
      >View all events â†’</a
    >
  </p>
</section>

<!-- Call to Action -->
<section
  class="watercolor-sand"
  style="
    background-color: var(--bg-accent);
    padding: 4rem 2rem;
    margin-top: 4rem;
  "
>
  <div class="container text-center">
    <h2 style="font-size: 2.5rem; margin-bottom: 1rem">
      Ready to Get Involved?
    </h2>
    <p
      style="font-size: 1.2rem; color: var(--text-primary); margin-bottom: 2rem"
    >
      Whether you want to attend an event, volunteer, or support our mission,
      we'd love to have you join us.
    </p>
    <div>
      <% if (!isLoggedIn) { %>
      <a href="/signup" class="btn btn-lg btn-primary">Create an Account</a>
      <a href="/login" class="btn btn-lg btn-contrast">Login</a>
      <% } else { %>
      <a href="/events" class="btn btn-lg btn-primary">Browse Events</a>
      <a href="/user/dashboard" class="btn btn-lg btn-secondary"
        >Go to My Rise</a
      >
      <% } %>
    </div>
  </div>
</section>

<%- include('partials/footer') %>
