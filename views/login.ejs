<%- include('partials/header') %>

<div class="container container-sm" style="margin-top: 4rem; margin-bottom: 4rem;">
  <div class="card" style="max-width: 500px; margin: 0 auto;">
    <h1 class="card-title text-center" style="font-size: 2rem;">Login to Ella Rises</h1>
    <p class="text-center mb-4" style="color: var(--text-secondary);">Welcome back! Please login to your account.</p>

    <% if (error) { %>
      <div class="alert alert-error">
        <%= error %>
      </div>
    <% } %>

    <form action="/login" method="POST">
      <div class="form-group">
        <label for="email" class="form-label">Email Address</label>
        <input
          type="email"
          id="email"
          name="email"
          class="form-input"
          placeholder="your@email.com"
          required
        />
      </div>

      <div class="form-group">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          id="password"
          name="password"
          class="form-input"
          placeholder="Enter your password"
          required
        />
      </div>

      <button type="submit" class="btn btn-primary btn-block btn-lg">
        Login
      </button>
    </form>

    <div class="card-footer text-center">
      <p>Don't have an account? <a href="/signup" style="color: #CE325B; font-weight: 600;">Sign up here</a></p>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
