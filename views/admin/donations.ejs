<%- include('../partials/header') %>

<div class="container container-lg watercolor-blush" style="margin-top: 3rem; margin-bottom: 4rem;">
  <h1 style="font-size: 2.5rem; margin-bottom: 1rem;"><%= t('admin.donations.title') %></h1>
  <p style="color: var(--text-secondary); margin-bottom: 2rem;">
    <%= t('admin.donations.copy') %>
  </p>

  <% if (donations && donations.length > 0) { %>
    <div style="overflow-x: auto;">
      <table class="table">
        <thead>
          <tr>
            <th><%= t('nav.home') || 'Donor' %></th>
            <th><%= t('admin.donations.amount') || 'Amount' %></th>
            <th><%= t('admin.surveys.table.date') %></th>
          </tr>
        </thead>
        <tbody>
          <% donations.forEach(donation => { %>
            <tr>
              <td>
                <% if (donation.user_name) { %>
                  <strong><%= donation.user_name %></strong>
                <% } else { %>
                  <em style="color: var(--text-secondary);"><%= t('admin.donations.anonymous') || 'Anonymous' %></em>
                <% } %>
              </td>
              <td>
                <span style="font-weight: 600; color: var(--success-color);">
                  $<%= parseFloat(donation.amount).toFixed(2) %>
                </span>
              </td>
              <td>
                <%= new Date(donation.created_at).toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'short',
                  day: 'numeric'
                }) %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <div style="margin-top: 2rem; text-align: center;">
      <% const total = donations.reduce((sum, d) => sum + parseFloat(d.amount), 0); %>
      <div style="font-size: 2rem; font-weight: 700; color: var(--success-color);">
        <%= t('admin.donations.total') || 'Total' %>: $<%= total.toFixed(2) %>
      </div>
      <div style="color: var(--text-secondary); margin-top: 0.5rem;">
        <%= t('admin.donations.count') || 'From' %> <%= donations.length %> donation<%= donations.length !== 1 ? 's' : '' %>
      </div>
    </div>
  <% } else { %>
    <div class="card text-center" style="padding: 4rem 2rem;">
      <h3 style="color: var(--text-secondary);"><%= t('admin.donations.empty') %></h3>
      <p style="color: var(--text-light); margin-top: 1rem;"><%= t('admin.donations.waiting') || 'Donation records will appear here once received.' %></p>
    </div>
  <% } %>
</div>

<%- include('../partials/footer') %>
