<%- include('../partials/header') %>

<div class="container container-lg watercolor-blush" style="margin-top: 3rem; margin-bottom: 4rem;">
  <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1rem;">
    <div>
      <h1 style="font-size: 2.5rem; margin-bottom: 0.5rem;"><%= t('admin.donations.title') %></h1>
      <p style="color: var(--text-secondary); margin: 0;">
        <%= t('admin.donations.copy') %>
      </p>
    </div>
    <button type="button" class="btn btn-primary" onclick="document.getElementById('createDonationModal').style.display='block'">
      + Add Donation
    </button>
  </div>

  <!-- Success/Error Messages -->
  <% if (req.query.success) { %>
    <div class="alert alert-success" style="margin-bottom: 2rem; margin-top: 1rem;">
      <% if (req.query.success === 'created') { %>
        Donation added successfully!
      <% } else if (req.query.success === 'updated') { %>
        Donation updated successfully!
      <% } else if (req.query.success === 'deleted') { %>
        Donation deleted successfully!
      <% } %>
    </div>
  <% } %>

  <% if (req.query.error) { %>
    <div class="alert alert-error" style="margin-bottom: 2rem; margin-top: 1rem;">
      <%= req.query.error %>
    </div>
  <% } %>

  <!-- Total Donations Display -->
  <% if (typeof totalAmount !== 'undefined') { %>
    <div class="card" style="margin-bottom: 2rem; text-align: center; background: linear-gradient(135deg, var(--sage-soft), var(--blush-soft)); border: 2px solid var(--success-color);">
      <div style="font-size: 3rem; font-weight: 700; color: var(--success-color); margin-bottom: 0.5rem;">
        $<%= totalAmount.toFixed(2) %>
      </div>
      <div style="font-size: 1.1rem; color: var(--text-secondary);">
        Total from <%= totalRecords %> donation<%= totalRecords !== 1 ? 's' : '' %>
        <% if (search || start_date || end_date) { %>
          <span style="color: var(--primary-color); font-weight: 600;">(filtered)</span>
        <% } %>
      </div>
    </div>
  <% } %>

  <!-- Search and Filter Bar -->
  <form action="/admin/donations" method="GET" class="search-bar" style="margin-bottom: 2rem;">
    <div style="display: grid; grid-template-columns: 1fr auto; gap: 1rem; align-items: end;">
      <div style="display: grid; grid-template-columns: 2fr 1fr 1fr; gap: 1rem;">
        <div>
          <label for="search" style="display: block; font-weight: 600; margin-bottom: 0.5rem; color: var(--text-secondary);">Search</label>
          <input
            type="text"
            id="search"
            name="search"
            class="search-input"
            placeholder="Search by donor name or amount..."
            value="<%= search %>"
          />
        </div>
        <div>
          <label for="start_date" style="display: block; font-weight: 600; margin-bottom: 0.5rem; color: var(--text-secondary);">Start Date</label>
          <input
            type="date"
            id="start_date"
            name="start_date"
            class="form-input"
            value="<%= start_date %>"
          />
        </div>
        <div>
          <label for="end_date" style="display: block; font-weight: 600; margin-bottom: 0.5rem; color: var(--text-secondary);">End Date</label>
          <input
            type="date"
            id="end_date"
            name="end_date"
            class="form-input"
            value="<%= end_date %>"
          />
        </div>
      </div>
      <div style="display: flex; gap: 0.5rem;">
        <button type="submit" class="btn btn-primary"><%= t('admin.participants.search') || 'Search' %></button>
        <% if (search || start_date || end_date) { %>
          <a href="/admin/donations" class="btn btn-outline"><%= t('admin.participants.clear') || 'Clear' %></a>
        <% } %>
      </div>
    </div>
  </form>

  <% if (donations && donations.length > 0) { %>
    <div style="overflow-x: auto;">
      <table class="table">
        <thead>
          <tr>
            <th>Donor</th>
            <th><%= t('admin.donations.amount') || 'Amount' %></th>
            <th><%= t('admin.surveys.table.date') %></th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% donations.forEach(donation => { %>
            <tr>
              <td>
                <% if (donation.user_name) { %>
                  <strong><%= donation.user_name %></strong>
                <% } else { %>
                  <em style="color: var(--text-secondary);"><%= t('admin.donations.anonymous') || 'Anonymous' %></em>
                <% } %>
              </td>
              <td>
                <span style="font-weight: 600; color: var(--success-color);">
                  $<%= parseFloat(donation.amount).toFixed(2) %>
                </span>
              </td>
              <td>
                <% const displayDate = donation.donation_date || donation.created_at; %>
                <%= displayDate ? new Date(displayDate).toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'short',
                  day: 'numeric'
                }) : '' %>
              </td>
              <td>
                <div style="display: flex; gap: 0.5rem; flex-wrap: wrap;">
                  <button type="button" class="btn btn-sm btn-primary"
                    onclick="openEditModal(<%= JSON.stringify(donation.id) %>, <%= JSON.stringify(donation.donor_name || '') %>, <%= JSON.stringify(donation.donor_email || '') %>, <%= JSON.stringify(String(donation.amount)) %>, <%= JSON.stringify(donation.message || '') %>, <%= JSON.stringify(donation.donation_date ? new Date(donation.donation_date).toISOString().slice(0,10) : '') %>)">
                    Edit
                  </button>
                  <form action="/admin/donations/<%= donation.id %>/delete" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this donation?');">
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                  </form>
                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <!-- Pagination Controls -->
    <% if (totalPages > 1) { %>
      <%
        // Build query string helper to preserve filters
        const buildQueryString = (page) => {
          const params = new URLSearchParams();
          params.set('page', page);
          if (search) params.set('search', search);
          if (start_date) params.set('start_date', start_date);
          if (end_date) params.set('end_date', end_date);
          return '?' + params.toString();
        };
      %>
      <div style="margin-top: 2rem; display: flex; justify-content: center; align-items: center; gap: 0.5rem; flex-wrap: wrap;">
        <% if (currentPage > 1) { %>
          <a href="/admin/donations<%= buildQueryString(currentPage - 1) %>" class="btn btn-sm btn-outline">← Previous</a>
        <% } %>

        <%
          const maxVisible = 7;
          let startPage = Math.max(1, currentPage - Math.floor(maxVisible / 2));
          let endPage = Math.min(totalPages, startPage + maxVisible - 1);
          if (endPage - startPage < maxVisible - 1) {
            startPage = Math.max(1, endPage - maxVisible + 1);
          }
        %>

        <% if (startPage > 1) { %>
          <a href="/admin/donations<%= buildQueryString(1) %>" class="btn btn-sm btn-outline">1</a>
          <% if (startPage > 2) { %>
            <span style="padding: 0 0.5rem;">...</span>
          <% } %>
        <% } %>

        <% for (let i = startPage; i <= endPage; i++) { %>
          <% if (i === currentPage) { %>
            <span class="btn btn-sm btn-primary" style="pointer-events: none;"><%= i %></span>
          <% } else { %>
            <a href="/admin/donations<%= buildQueryString(i) %>" class="btn btn-sm btn-outline"><%= i %></a>
          <% } %>
        <% } %>

        <% if (endPage < totalPages) { %>
          <% if (endPage < totalPages - 1) { %>
            <span style="padding: 0 0.5rem;">...</span>
          <% } %>
          <a href="/admin/donations<%= buildQueryString(totalPages) %>" class="btn btn-sm btn-outline"><%= totalPages %></a>
        <% } %>

        <% if (currentPage < totalPages) { %>
          <a href="/admin/donations<%= buildQueryString(currentPage + 1) %>" class="btn btn-sm btn-outline">Next →</a>
        <% } %>
      </div>
    <% } %>

    <div style="margin-top: 1rem; text-align: center; color: var(--text-secondary);">
      <% if (typeof totalRecords !== 'undefined' && totalPages > 1) { %>
        Showing page <%= currentPage %> of <%= totalPages %>
      <% } else if (donations.length > 0) { %>
        Showing <%= donations.length %> donation<%= donations.length !== 1 ? 's' : '' %>
      <% } %>
    </div>
  <% } else { %>
    <div class="card text-center" style="padding: 4rem 2rem;">
      <h3 style="color: var(--text-secondary);"><%= t('admin.donations.empty') %></h3>
      <p style="color: var(--text-light); margin-top: 1rem;"><%= t('admin.donations.waiting') || 'Donation records will appear here once received.' %></p>
    </div>
  <% } %>
</div>

<!-- Create Donation Modal -->
<div id="createDonationModal" role="dialog" aria-modal="true" aria-labelledby="createDonationTitle" style="display: none; position: fixed; z-index: 1000; left: 0; top: 0; width: 100%; height: 100%; background-color: rgba(0,0,0,0.5);">
  <div style="background-color: var(--bg-primary); margin: 5% auto; padding: 2rem; border-radius: var(--border-radius); max-width: 600px;">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem;">
      <h2 id="createDonationTitle">Add New Donation</h2>
      <button onclick="document.getElementById('createDonationModal').style.display='none'" aria-label="Close dialog" style="background: none; border: none; font-size: 1.5rem; cursor: pointer;">&times;</button>
    </div>
    <form action="/admin/donations/create" method="POST" aria-label="Create donation form">
      <div class="form-group">
        <label for="create_donor_name" class="form-label">Donor Name</label>
        <input type="text" id="create_donor_name" name="donor_name" class="form-input" placeholder="Or leave blank for Anonymous">
      </div>
      <div class="form-group">
        <label for="create_donor_email" class="form-label">Donor Email</label>
        <input type="email" id="create_donor_email" name="donor_email" class="form-input" placeholder="Optional">
      </div>
      <div class="form-group">
        <label for="create_amount" class="form-label">Amount *</label>
        <input type="number" id="create_amount" name="amount" class="form-input" step="0.01" min="0.01" required>
      </div>
      <div class="form-group">
        <label for="create_donation_date" class="form-label">Donation Date</label>
        <input type="date" id="create_donation_date" name="donation_date" class="form-input" value="<%= new Date().toISOString().slice(0,10) %>">
      </div>
      <div class="form-group">
        <label for="create_message" class="form-label">Message</label>
        <textarea id="create_message" name="message" class="form-textarea" rows="3" placeholder="Optional message"></textarea>
      </div>
      <div style="display: flex; gap: 1rem; margin-top: 1.5rem;">
        <button type="submit" class="btn btn-primary">Add Donation</button>
        <button type="button" class="btn btn-outline" onclick="document.getElementById('createDonationModal').style.display='none'">Cancel</button>
      </div>
    </form>
  </div>
</div>

<!-- Edit Donation Modal -->
<div id="editDonationModal" role="dialog" aria-modal="true" aria-labelledby="editDonationTitle" style="display: none; position: fixed; z-index: 1000; left: 0; top: 0; width: 100%; height: 100%; background-color: rgba(0,0,0,0.5);">
  <div style="background-color: var(--bg-primary); margin: 5% auto; padding: 2rem; border-radius: var(--border-radius); max-width: 600px;">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem;">
      <h2 id="editDonationTitle">Edit Donation</h2>
      <button onclick="document.getElementById('editDonationModal').style.display='none'" aria-label="Close dialog" style="background: none; border: none; font-size: 1.5rem; cursor: pointer;">&times;</button>
    </div>
    <form id="editDonationForm" method="POST" aria-label="Edit donation form">
      <div class="form-group">
        <label for="edit_donor_name" class="form-label">Donor Name</label>
        <input type="text" name="donor_name" id="edit_donor_name" class="form-input">
      </div>
      <div class="form-group">
        <label for="edit_donor_email" class="form-label">Donor Email</label>
        <input type="email" name="donor_email" id="edit_donor_email" class="form-input">
      </div>
      <div class="form-group">
        <label for="edit_amount" class="form-label">Amount *</label>
        <input type="number" name="amount" id="edit_amount" class="form-input" step="0.01" min="0.01" required>
      </div>
      <div class="form-group">
        <label for="edit_donation_date" class="form-label">Donation Date</label>
        <input type="date" name="donation_date" id="edit_donation_date" class="form-input">
      </div>
      <div class="form-group">
        <label for="edit_message" class="form-label">Message</label>
        <textarea name="message" id="edit_message" class="form-textarea" rows="3"></textarea>
      </div>
      <div style="display: flex; gap: 1rem; margin-top: 1.5rem;">
        <button type="submit" class="btn btn-primary">Update Donation</button>
        <button type="button" class="btn btn-outline" onclick="document.getElementById('editDonationModal').style.display='none'">Cancel</button>
      </div>
    </form>
  </div>
</div>

<script>
function openEditModal(id, donorName, donorEmail, amount, message, donationDate) {
  document.getElementById('editDonationForm').action = `/admin/donations/${id}/edit`;
  document.getElementById('edit_donor_name').value = donorName || '';
  document.getElementById('edit_donor_email').value = donorEmail || '';
  document.getElementById('edit_amount').value = amount;
  document.getElementById('edit_message').value = message || '';
  document.getElementById('edit_donation_date').value = donationDate || '';
  document.getElementById('editDonationModal').style.display = 'block';
}

// Close modals when clicking outside
window.onclick = function(event) {
  if (event.target.id === 'createDonationModal') {
    document.getElementById('createDonationModal').style.display = 'none';
  }
  if (event.target.id === 'editDonationModal') {
    document.getElementById('editDonationModal').style.display = 'none';
  }
}

// Close modals with ESC key (WCAG 2.1.2 - No Keyboard Trap)
document.addEventListener('keydown', function(event) {
  if (event.key === 'Escape' || event.key === 'Esc') {
    const createModal = document.getElementById('createDonationModal');
    const editModal = document.getElementById('editDonationModal');
    if (createModal && createModal.style.display === 'block') {
      createModal.style.display = 'none';
    }
    if (editModal && editModal.style.display === 'block') {
      editModal.style.display = 'none';
    }
  }
});
</script>

<%- include('../partials/footer') %>
