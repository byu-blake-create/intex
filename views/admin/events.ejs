<%- include('../partials/header') %>

<div class="container container-lg watercolor-sand" style="margin-top: 3rem; margin-bottom: 4rem;">
  <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
    <div>
      <h1 style="font-size: 2.5rem; margin-bottom: 0.5rem;"><%= t('admin.events.manage') %></h1>
      <p style="color: var(--text-secondary); margin: 0;">
        <%= t('admin.events.manage.copy') %>
      </p>
    </div>
    <a href="/admin/events/new" class="btn btn-primary">+ Create New Event</a>
  </div>

  <!-- Search Bar -->
  <form action="/admin/events" method="GET" class="search-bar" style="margin-bottom: 2rem;">
    <input
      type="text"
      name="search"
      class="search-input"
      placeholder="<%= t('admin.events.search.placeholder') || 'Search events...' %>"
      value="<%= search %>"
    />
    <button type="submit" class="btn btn-primary"><%= t('admin.participants.search') || 'Search' %></button>
    <% if (search) { %>
      <a href="/admin/events" class="btn btn-outline"><%= t('admin.participants.clear') || 'Clear' %></a>
    <% } %>
  </form>

  <% if (req.query.success) { %>
    <div class="alert alert-success" style="margin-bottom: 2rem;">
      <% if (req.query.success === 'created') { %>
        Event created successfully!
      <% } else if (req.query.success === 'updated') { %>
        Event updated successfully!
      <% } else if (req.query.success === 'deleted') { %>
        Event deleted successfully!
      <% } %>
    </div>
  <% } %>

  <% if (events && events.length > 0) { %>
    <div style="overflow-x: auto;">
      <table class="table">
        <thead>
          <tr>
            <th><%= t('admin.events.table.name') %></th>
            <th><%= t('admin.events.table.date') %></th>
            <th><%= t('admin.events.table.location') %></th>
            <th><%= t('admin.events.table.capacity') %></th>
            <th><%= t('admin.events.table.actions') %></th>
          </tr>
        </thead>
        <tbody>
          <% events.forEach(event => { %>
            <tr>
              <td><strong><%= event.title %></strong></td>
              <td>
                <%= new Date(event.start_time).toLocaleDateString('en-US', {
                  weekday: 'short',
                  year: 'numeric',
                  month: 'short',
                  day: 'numeric'
                }) %>
              </td>
              <td><%= event.location || t('admin.events.location.tbd') %></td>
              <td><%= event.capacity || t('admin.events.capacity.unlimited') %></td>
              <td>
                <div style="display: flex; gap: 0.5rem;">
                  <a href="/events/<%= event.id %>" class="btn btn-sm btn-secondary"><%= t('admin.events.table.view') %></a>
                  <a href="/admin/events/<%= event.id %>/edit" class="btn btn-sm btn-primary">Edit</a>
                  <form action="/admin/events/<%= event.id %>/delete" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this event?');">
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                  </form>
                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <!-- Pagination Controls -->
    <% if (totalPages > 1) { %>
      <div style="margin-top: 2rem; display: flex; justify-content: center; align-items: center; gap: 0.5rem; flex-wrap: wrap;">
        <% if (currentPage > 1) { %>
          <a href="/admin/events?page=<%= currentPage - 1 %><%= search ? '&search=' + encodeURIComponent(search) : '' %>" class="btn btn-sm btn-outline">← Previous</a>
        <% } %>

        <%
          const maxVisible = 7;
          let startPage = Math.max(1, currentPage - Math.floor(maxVisible / 2));
          let endPage = Math.min(totalPages, startPage + maxVisible - 1);
          if (endPage - startPage < maxVisible - 1) {
            startPage = Math.max(1, endPage - maxVisible + 1);
          }
        %>

        <% if (startPage > 1) { %>
          <a href="/admin/events?page=1<%= search ? '&search=' + encodeURIComponent(search) : '' %>" class="btn btn-sm btn-outline">1</a>
          <% if (startPage > 2) { %>
            <span style="padding: 0 0.5rem;">...</span>
          <% } %>
        <% } %>

        <% for (let i = startPage; i <= endPage; i++) { %>
          <% if (i === currentPage) { %>
            <span class="btn btn-sm btn-primary" style="pointer-events: none;"><%= i %></span>
          <% } else { %>
            <a href="/admin/events?page=<%= i %><%= search ? '&search=' + encodeURIComponent(search) : '' %>" class="btn btn-sm btn-outline"><%= i %></a>
          <% } %>
        <% } %>

        <% if (endPage < totalPages) { %>
          <% if (endPage < totalPages - 1) { %>
            <span style="padding: 0 0.5rem;">...</span>
          <% } %>
          <a href="/admin/events?page=<%= totalPages %><%= search ? '&search=' + encodeURIComponent(search) : '' %>" class="btn btn-sm btn-outline"><%= totalPages %></a>
        <% } %>

        <% if (currentPage < totalPages) { %>
          <a href="/admin/events?page=<%= currentPage + 1 %><%= search ? '&search=' + encodeURIComponent(search) : '' %>" class="btn btn-sm btn-outline">Next →</a>
        <% } %>
      </div>
    <% } %>

    <div style="margin-top: 1rem; text-align: center; color: var(--text-secondary);">
      <% if (typeof totalRecords !== 'undefined' && totalPages > 1) { %>
        Showing page <%= currentPage %> of <%= totalPages %> (<%= totalRecords %> total events)
      <% } else { %>
        <%= t('admin.events.total') %>: <%= events.length %> event<%= events.length !== 1 ? 's' : '' %>
      <% } %>
    </div>
  <% } else { %>
    <div class="card text-center" style="padding: 4rem 2rem;">
      <h3 style="color: var(--text-secondary);"><%= t('admin.events.empty') %></h3>
    </div>
  <% } %>
</div>

<%- include('../partials/footer') %>
