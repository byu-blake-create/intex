<%- include('../partials/header') %>

<div class="container container-lg watercolor-sand" style="margin-top: 3rem; margin-bottom: 4rem;">
  <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem; flex-wrap: wrap; gap: 1rem;">
    <div>
      <h1 style="font-size: 2.5rem; margin-bottom: 0.5rem;"><%= t('admin.events.manage') %></h1>
      <p style="color: var(--text-secondary); margin: 0;">
        <%= t('admin.events.manage.copy') %>
      </p>
    </div>
    <div style="display: flex; gap: 0.5rem; flex-wrap: wrap;">
      <%
        let exportQuery = '';
        if (search || start_date || end_date) {
          const params = new URLSearchParams();
          if (search) params.append('search', search);
          if (start_date) params.append('start_date', start_date);
          if (end_date) params.append('end_date', end_date);
          exportQuery = '?' + params.toString();
        }
      %>
      <a href="/admin/events/export/csv<%= exportQuery %>" class="btn btn-outline" title="Export to CSV">
        üìä Export CSV
      </a>
      <a href="/admin/events/export/pdf<%= exportQuery %>" class="btn btn-outline" title="Export to PDF">
        üìÑ Export PDF
      </a>
      <a href="/admin/events/new" class="btn btn-primary">+ Create New Event</a>
    </div>
  </div>

  <!-- Search and Filter Bar -->
  <form action="/admin/events" method="GET" class="search-bar" style="margin-bottom: 2rem;">
    <div style="display: grid; grid-template-columns: 1fr auto; gap: 1rem; align-items: end;">
      <div style="display: grid; grid-template-columns: 2fr 1fr 1fr; gap: 1rem;">
        <div>
          <label for="search" style="display: block; font-weight: 600; margin-bottom: 0.5rem; color: var(--text-secondary);">Search</label>
          <input
            type="text"
            id="search"
            name="search"
            class="search-input"
            placeholder="Search by title, description, or location..."
            value="<%= search %>"
          />
        </div>
        <div>
          <label for="start_date" style="display: block; font-weight: 600; margin-bottom: 0.5rem; color: var(--text-secondary);">Start Date</label>
          <input
            type="date"
            id="start_date"
            name="start_date"
            class="form-input"
            value="<%= start_date %>"
          />
        </div>
        <div>
          <label for="end_date" style="display: block; font-weight: 600; margin-bottom: 0.5rem; color: var(--text-secondary);">End Date</label>
          <input
            type="date"
            id="end_date"
            name="end_date"
            class="form-input"
            value="<%= end_date %>"
          />
        </div>
      </div>
      <div style="display: flex; gap: 0.5rem;">
        <button type="submit" class="btn btn-primary"><%= t('admin.participants.search') || 'Search' %></button>
        <% if (search || start_date || end_date) { %>
          <a href="/admin/events" class="btn btn-outline"><%= t('admin.participants.clear') || 'Clear' %></a>
        <% } %>
      </div>
    </div>
  </form>

  <% if (req.query.success) { %>
    <div class="alert alert-success" style="margin-bottom: 2rem;">
      <% if (req.query.success === 'created') { %>
        Event created successfully!
      <% } else if (req.query.success === 'updated') { %>
        Event updated successfully!
      <% } else if (req.query.success === 'deleted') { %>
        Event deleted successfully!
      <% } %>
    </div>
  <% } %>

  <% if (events && events.length > 0) { %>
    <div style="overflow-x: auto;">
      <table class="table">
        <thead>
          <tr>
            <th><%= t('admin.events.table.name') %></th>
            <th><%= t('admin.events.table.date') %></th>
            <th><%= t('admin.events.table.location') %></th>
            <th><%= t('admin.events.table.capacity') %></th>
            <th><%= t('admin.events.table.actions') %></th>
          </tr>
        </thead>
        <tbody>
          <% events.forEach(event => { %>
            <tr>
              <td><strong><%= event.title %></strong></td>
              <td>
                <%= new Date(event.start_time).toLocaleDateString('en-US', {
                  weekday: 'short',
                  year: 'numeric',
                  month: 'short',
                  day: 'numeric'
                }) %>
              </td>
              <td><%= event.location || t('admin.events.location.tbd') %></td>
              <td><%= event.capacity || t('admin.events.capacity.unlimited') %></td>
              <td>
                <div style="display: flex; gap: 0.5rem;">
                  <a href="/events/<%= event.id %>" class="btn btn-sm btn-secondary"><%= t('admin.events.table.view') %></a>
                  <a href="/admin/events/<%= event.id %>/edit" class="btn btn-sm btn-primary">Edit</a>
                  <form action="/admin/events/<%= event.id %>/delete" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this event?');">
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                  </form>
                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <!-- Pagination Controls -->
    <% if (totalPages > 1) { %>
      <%
        // Build query string helper to preserve filters
        const buildQueryString = (page) => {
          const params = new URLSearchParams();
          params.set('page', page);
          if (search) params.set('search', search);
          if (start_date) params.set('start_date', start_date);
          if (end_date) params.set('end_date', end_date);
          return '?' + params.toString();
        };
      %>
      <div style="margin-top: 2rem; display: flex; justify-content: center; align-items: center; gap: 0.5rem; flex-wrap: wrap;">
        <% if (currentPage > 1) { %>
          <a href="/admin/events<%= buildQueryString(currentPage - 1) %>" class="btn btn-sm btn-outline">‚Üê Previous</a>
        <% } %>

        <%
          const maxVisible = 7;
          let startPage = Math.max(1, currentPage - Math.floor(maxVisible / 2));
          let endPage = Math.min(totalPages, startPage + maxVisible - 1);
          if (endPage - startPage < maxVisible - 1) {
            startPage = Math.max(1, endPage - maxVisible + 1);
          }
        %>

        <% if (startPage > 1) { %>
          <a href="/admin/events<%= buildQueryString(1) %>" class="btn btn-sm btn-outline">1</a>
          <% if (startPage > 2) { %>
            <span style="padding: 0 0.5rem;">...</span>
          <% } %>
        <% } %>

        <% for (let i = startPage; i <= endPage; i++) { %>
          <% if (i === currentPage) { %>
            <span class="btn btn-sm btn-primary" style="pointer-events: none;"><%= i %></span>
          <% } else { %>
            <a href="/admin/events<%= buildQueryString(i) %>" class="btn btn-sm btn-outline"><%= i %></a>
          <% } %>
        <% } %>

        <% if (endPage < totalPages) { %>
          <% if (endPage < totalPages - 1) { %>
            <span style="padding: 0 0.5rem;">...</span>
          <% } %>
          <a href="/admin/events<%= buildQueryString(totalPages) %>" class="btn btn-sm btn-outline"><%= totalPages %></a>
        <% } %>

        <% if (currentPage < totalPages) { %>
          <a href="/admin/events<%= buildQueryString(currentPage + 1) %>" class="btn btn-sm btn-outline">Next ‚Üí</a>
        <% } %>
      </div>
    <% } %>

    <div style="margin-top: 1rem; text-align: center; color: var(--text-secondary);">
      <% if (typeof totalRecords !== 'undefined' && totalPages > 1) { %>
        Showing page <%= currentPage %> of <%= totalPages %> (<%= totalRecords %> total events)
      <% } else { %>
        <%= t('admin.events.total') %>: <%= events.length %> event<%= events.length !== 1 ? 's' : '' %>
      <% } %>
    </div>
  <% } else { %>
    <div class="card text-center" style="padding: 4rem 2rem;">
      <h3 style="color: var(--text-secondary);"><%= t('admin.events.empty') %></h3>
    </div>
  <% } %>
</div>

<%- include('../partials/footer') %>
