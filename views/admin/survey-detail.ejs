<%- include('../partials/header') %>

<div class="container watercolor-blush" style="margin-top: 3rem; margin-bottom: 4rem;">
  <!-- Back button and actions -->
  <div style="display: flex; gap: 1rem; margin-bottom: 2rem; flex-wrap: wrap; align-items: center;">
    <a href="/admin/surveys" class="btn btn-outline"><%= t('admin.surveyDetail.back') %></a>
    <a href="/admin/surveys/<%= survey.id %>/edit" class="btn btn-primary">Edit Survey</a>
    <form action="/admin/surveys/<%= survey.id %>/delete" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this survey?');">
      <button type="submit" class="btn btn-danger">Delete Survey</button>
    </form>
  </div>

  <% if (req.query.success === 'updated') { %>
    <div class="alert alert-success" style="margin-bottom: 2rem;">
      Survey updated successfully!
    </div>
  <% } %>

  <h1 style="font-size: 2.5rem; margin-bottom: 1rem;"><%= t('admin.surveyDetail.title') %></h1>

  <!-- Survey Overview Card -->
  <div class="card" style="margin-bottom: 2rem;">
    <div class="grid grid-2">
      <div>
        <h3 style="margin-bottom: 1rem; color: var(--text-secondary); font-size: 0.9rem; text-transform: uppercase;"><%= t('admin.surveyDetail.participant') %></h3>
        <p style="font-size: 1.2rem; font-weight: 600;"><%= survey.user_name %></p>
        <p style="color: var(--text-secondary); font-size: 0.9rem;"><%= survey.user_email %></p>
      </div>
      <div>
        <h3 style="margin-bottom: 1rem; color: var(--text-secondary); font-size: 0.9rem; text-transform: uppercase;"><%= t('admin.surveyDetail.event') %></h3>
        <p style="font-size: 1.2rem; font-weight: 600;"><%= survey.event_title %></p>
      </div>
    </div>

    <div style="margin-top: 2rem; padding-top: 2rem; border-top: 1px solid var(--border-color);">
      <div class="grid grid-3">
        <div>
          <h3 style="margin-bottom: 0.5rem; color: var(--text-secondary); font-size: 0.9rem; text-transform: uppercase;"><%= t('admin.surveyDetail.overall') %></h3>
          <p style="font-size: 2rem; font-weight: 700; color: var(--primary-color);">
            <%= survey.overall_score ? parseFloat(survey.overall_score).toFixed(2) : 'N/A' %>
          </p>
          <p style="color: var(--text-secondary);">
            <%= survey.overall_score ? '⭐'.repeat(Math.round(parseFloat(survey.overall_score))) : '' %>
          </p>
        </div>
        <div>
          <h3 style="margin-bottom: 0.5rem; color: var(--text-secondary); font-size: 0.9rem; text-transform: uppercase;"><%= t('admin.surveyDetail.nps') %></h3>
          <div style="margin-top: 1rem;">
            <% if (survey.net_promoter_score === 'Promoter') { %>
              <span class="badge badge-success" style="font-size: 1.1rem; padding: 0.75rem 1.5rem;">Promoter</span>
            <% } else if (survey.net_promoter_score === 'Passive') { %>
              <span class="badge" style="background-color: #fbbf24; color: #1a1a1a; font-size: 1.1rem; padding: 0.75rem 1.5rem;">Passive</span>
            <% } else { %>
              <span class="badge badge-danger" style="font-size: 1.1rem; padding: 0.75rem 1.5rem;">Detractor</span>
            <% } %>
          </div>
        </div>
        <div>
          <h3 style="margin-bottom: 0.5rem; color: var(--text-secondary); font-size: 0.9rem; text-transform: uppercase;"><%= t('admin.surveyDetail.submitted') %></h3>
          <p style="font-size: 1.1rem; font-weight: 600; margin-top: 1rem;">
            <%= new Date(survey.created_at).toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            }) %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Detailed Ratings -->
  <div class="card" style="margin-bottom: 2rem;">
    <h2 style="font-size: 1.5rem; margin-bottom: 2rem;"><%= t('admin.surveyDetail.responses') %></h2>

    <div style="display: flex; flex-direction: column; gap: 1.5rem;">
      <!-- Satisfaction Rating -->
      <div>
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 0.5rem;">
          <h3 style="color: var(--text-secondary); font-size: 1rem;"><%= t('admin.surveyDetail.responses.q1') %></h3>
          <span style="font-size: 1.5rem; font-weight: 700;"><%= survey.satisfaction_rating %>/5</span>
        </div>
        <div style="font-size: 1.5rem;">
          <%= '⭐'.repeat(survey.satisfaction_rating || 0) %>
        </div>
      </div>

      <!-- Usefulness Rating -->
      <div>
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 0.5rem;">
          <h3 style="color: var(--text-secondary); font-size: 1rem;"><%= t('admin.surveyDetail.responses.q2') %></h3>
          <span style="font-size: 1.5rem; font-weight: 700;"><%= survey.usefulness_rating %>/5</span>
        </div>
        <div style="font-size: 1.5rem;">
          <%= '⭐'.repeat(survey.usefulness_rating || 0) %>
        </div>
      </div>

      <!-- Instructor Rating -->
      <div>
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 0.5rem;">
          <h3 style="color: var(--text-secondary); font-size: 1rem;"><%= t('admin.surveyDetail.responses.q3') %></h3>
          <span style="font-size: 1.5rem; font-weight: 700;"><%= survey.instructor_rating %>/5</span>
        </div>
        <div style="font-size: 1.5rem;">
          <%= '⭐'.repeat(survey.instructor_rating || 0) %>
        </div>
      </div>

      <!-- Recommendation Rating -->
      <div>
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 0.5rem;">
          <h3 style="color: var(--text-secondary); font-size: 1rem;"><%= t('admin.surveyDetail.responses.q4') %></h3>
          <span style="font-size: 1.5rem; font-weight: 700;"><%= survey.recommendation_rating %>/5</span>
        </div>
        <div style="font-size: 1.5rem;">
          <%= '⭐'.repeat(survey.recommendation_rating || 0) %>
        </div>
      </div>
    </div>
  </div>

  <!-- Additional Feedback -->
  <div class="card">
    <h2 style="font-size: 1.5rem; margin-bottom: 1.5rem;"><%= t('admin.surveyDetail.feedback') %></h2>
    <% if (survey.additional_feedback && survey.additional_feedback.trim()) { %>
      <div style="background-color: var(--sage-soft); padding: 1.5rem; border-radius: var(--border-radius); line-height: 1.6; color: var(--text-color);">
        <p style="white-space: pre-wrap; margin: 0;"><%= survey.additional_feedback %></p>
      </div>
    <% } else { %>
      <p style="color: var(--text-secondary); font-style: italic;"><%= t('admin.surveys.feedback.none') %></p>
    <% } %>
  </div>

  <!-- Action buttons -->
  <div style="margin-top: 3rem; text-align: center;">
    <a href="/admin/surveys" class="btn btn-primary"><%= t('admin.surveyDetail.back') %></a>
  </div>
</div>

<%- include('../partials/footer') %>
