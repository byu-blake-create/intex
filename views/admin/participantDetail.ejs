<%- include('../partials/header') %>

<div class="container watercolor-rose" style="margin-top: 3rem; margin-bottom: 4rem;">
  <!-- Back Button and Actions -->
  <div style="display: flex; gap: 1rem; margin-bottom: 2rem; flex-wrap: wrap; align-items: center;">
    <a href="/admin/participants" style="color: #CE325B;">
      ‚Üê Back to Participants
    </a>
    <a href="/admin/participants/<%= participant.id %>/edit" class="btn btn-primary">Edit User</a>
    <form action="/admin/participants/<%= participant.id %>/delete" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this user? This action cannot be undone.');">
      <button type="submit" class="btn btn-danger">Delete User</button>
    </form>
  </div>

  <!-- User Info Card -->
  <div class="card" style="margin-bottom: 2rem;">
    <h1 class="card-title" style="font-size: 2rem; margin-bottom: 2rem;"><%= participant.name %></h1>

    <!-- Basic Info Grid -->
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 1.5rem; margin-bottom: 2rem;">
      <div>
        <div style="font-weight: 600; color: var(--text-secondary); margin-bottom: 0.5rem;">Email</div>
        <div><%= participant.email %></div>
      </div>
      <div>
        <div style="font-weight: 600; color: var(--text-secondary); margin-bottom: 0.5rem;">Role</div>
        <div>
          <% if (participant.role === 'admin') { %>
            <span class="badge badge-danger">Admin</span>
          <% } else { %>
            <span class="badge badge-primary">Participant</span>
          <% } %>
        </div>
      </div>
      <div>
        <div style="font-weight: 600; color: var(--text-secondary); margin-bottom: 0.5rem;">Total Donations</div>
        <div style="font-size: 1.5rem; font-weight: 700; color: var(--success-color);">
          $<%= parseFloat(participant.total_donations || 0).toFixed(2) %>
        </div>
      </div>
      <div>
        <div style="font-weight: 600; color: var(--text-secondary); margin-bottom: 0.5rem;">Login Count</div>
        <div><%= participant.login_count || 0 %> times</div>
      </div>
    </div>

    <!-- Additional Info -->
    <% if (participant.date_of_birth || participant.phone || participant.city || participant.school_or_employer || participant.field_of_interest) { %>
      <div style="border-top: 1px solid var(--border-color); padding-top: 2rem; margin-top: 2rem;">
        <h2 style="font-size: 1.3rem; margin-bottom: 1.5rem;">Additional Information</h2>
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 1.5rem;">
          <% if (participant.date_of_birth) { %>
            <div>
              <div style="font-weight: 600; color: var(--text-secondary); margin-bottom: 0.5rem;">Date of Birth</div>
              <div><%= new Date(participant.date_of_birth).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></div>
            </div>
          <% } %>
          <% if (participant.phone) { %>
            <div>
              <div style="font-weight: 600; color: var(--text-secondary); margin-bottom: 0.5rem;">Phone</div>
              <div><%= participant.phone %></div>
            </div>
          <% } %>
          <% if (participant.city && participant.state) { %>
            <div>
              <div style="font-weight: 600; color: var(--text-secondary); margin-bottom: 0.5rem;">Location</div>
              <div><%= participant.city %>, <%= participant.state %> <%= participant.zip || '' %></div>
            </div>
          <% } %>
          <% if (participant.school_or_employer) { %>
            <div>
              <div style="font-weight: 600; color: var(--text-secondary); margin-bottom: 0.5rem;">School/Employer</div>
              <div><%= participant.school_or_employer %></div>
            </div>
          <% } %>
          <% if (participant.field_of_interest) { %>
            <div>
              <div style="font-weight: 600; color: var(--text-secondary); margin-bottom: 0.5rem;">Field of Interest</div>
              <div>
                <span class="badge badge-primary"><%= participant.field_of_interest %></span>
              </div>
            </div>
          <% } %>
        </div>
      </div>
    <% } %>
  </div>

  <!-- Stats Cards -->
  <div class="grid grid-4" style="margin-bottom: 2rem;">
    <div class="card text-center">
      <div style="font-size: 2.5rem; font-weight: 700; color: var(--primary-color);"><%= userEvents.length %></div>
      <div style="color: var(--text-secondary);">Events Registered</div>
    </div>
    <div class="card text-center">
      <div style="font-size: 2.5rem; font-weight: 700; color: var(--success-color);"><%= userDonations.length %></div>
      <div style="color: var(--text-secondary);">Donations</div>
    </div>
    <div class="card text-center">
      <div style="font-size: 2.5rem; font-weight: 700; color: #9333ea;"><%= userMilestones.length %></div>
      <div style="color: var(--text-secondary);">Milestones</div>
    </div>
    <div class="card text-center">
      <div style="font-size: 2.5rem; font-weight: 700; color: #f59e0b;"><%= userSurveys.length %></div>
      <div style="color: var(--text-secondary);">Surveys</div>
    </div>
  </div>

  <!-- Enrolled Programs -->
  <div class="card" style="margin-bottom: 2rem;">
    <h2 style="font-size: 1.5rem; margin-bottom: 1.5rem;">Enrolled Programs (<%= enrolledPrograms.length %>)</h2>
    <% if (enrolledPrograms.length > 0) { %>
      <div style="overflow-x: auto;">
        <table class="table">
          <thead>
            <tr>
              <th>Program Name</th>
              <th>Schedule</th>
              <th>Fee</th>
              <th>Enrolled Date</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <% enrolledPrograms.forEach(program => { %>
              <tr>
                <td><strong><%= program.title %></strong></td>
                <td><%= program.schedule || 'TBD' %></td>
                <td><%= program.fee ? '$' + parseFloat(program.fee).toFixed(2) : 'Free' %></td>
                <td><%= new Date(program.enrolled_at).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></td>
                <td>
                  <span class="badge <%= program.status === 'active' ? 'badge-success' : 'badge-secondary' %>">
                    <%= program.status %>
                  </span>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <p style="text-align: center; color: var(--text-secondary); padding: 2rem;">No programs enrolled yet.</p>
    <% } %>
  </div>

  <!-- Donations -->
  <div class="card" style="margin-bottom: 2rem;">
    <h2 style="font-size: 1.5rem; margin-bottom: 1.5rem;">
      Donation History (<%= userDonations.length %>)
      <% if (userDonations.length > 0) { %>
        <span style="font-size: 1rem; font-weight: 600; color: var(--success-color); margin-left: 1rem;">
          Total: $<%= parseFloat(participant.total_donations || 0).toFixed(2) %>
        </span>
      <% } %>
    </h2>
    <% if (userDonations.length > 0) { %>
      <div style="overflow-x: auto;">
        <table class="table">
          <thead>
            <tr>
              <th>Amount</th>
              <th>Date</th>
              <th>Donation #</th>
            </tr>
          </thead>
          <tbody>
            <% userDonations.forEach(donation => { %>
              <tr>
                <td>
                  <span style="font-weight: 600; color: var(--success-color); font-size: 1.1rem;">
                    $<%= parseFloat(donation.amount).toFixed(2) %>
                  </span>
                </td>
                <td>
                  <% if (donation.created_at) { %>
                    <%= new Date(donation.created_at).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %>
                  <% } else { %>
                    <em style="color: var(--text-secondary);">Date not recorded</em>
                  <% } %>
                </td>
                <td><%= donation.donation_number || '-' %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <p style="text-align: center; color: var(--text-secondary); padding: 2rem;">No donations yet.</p>
    <% } %>
  </div>

  <!-- Milestones -->
  <div class="card" style="margin-bottom: 2rem;">
    <h2 style="font-size: 1.5rem; margin-bottom: 1.5rem;">Milestones Achieved (<%= userMilestones.length %>)</h2>
    <% if (userMilestones.length > 0) { %>
      <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: 1.5rem;">
        <% userMilestones.forEach(milestone => { %>
          <div style="padding: 1.5rem; background-color: var(--sage-soft); border-radius: var(--border-radius); text-align: center; color: var(--text-color);">
            <div style="font-size: 3rem; margin-bottom: 1rem;">üèÜ</div>
            <% if (milestone.milestone_title) { %>
              <div class="badge badge-primary" style="margin-bottom: 0.5rem;"><%= milestone.milestone_title %></div>
            <% } %>
            <h3 style="margin: 0.5rem 0; font-size: 1.1rem;"><%= milestone.custom_title || milestone.milestone_title %></h3>
            <% if (milestone.achieved_at) { %>
              <div style="color: var(--text-secondary); font-size: 0.9rem; margin-top: 0.5rem;">
                <%= new Date(milestone.achieved_at).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' }) %>
              </div>
            <% } %>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <p style="text-align: center; color: var(--text-secondary); padding: 2rem;">No milestones achieved yet.</p>
    <% } %>
  </div>

  <!-- Event Registrations -->
  <div class="card" style="margin-bottom: 2rem;">
    <h2 style="font-size: 1.5rem; margin-bottom: 1.5rem;">Event Registrations (<%= userEvents.length %>)</h2>
    <% if (userEvents.length > 0) { %>
      <div style="overflow-x: auto;">
        <table class="table">
          <thead>
            <tr>
              <th>Event</th>
              <th>Date</th>
              <th>Location</th>
              <th>Status</th>
              <th>Registered</th>
            </tr>
          </thead>
          <tbody>
            <% userEvents.forEach(event => { %>
              <tr>
                <td><strong><%= event.title %></strong></td>
                <td><%= new Date(event.start_time).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></td>
                <td><%= event.location || 'TBD' %></td>
                <td>
                  <% if (event.attendance_status === 'attended') { %>
                    <span class="badge badge-success">Attended</span>
                  <% } else if (event.attendance_status === 'no-show') { %>
                    <span class="badge badge-danger">No Show</span>
                  <% } else if (event.attendance_status === 'cancelled') { %>
                    <span class="badge badge-secondary">Cancelled</span>
                  <% } else { %>
                    <span class="badge badge-primary">Registered</span>
                  <% } %>
                </td>
                <td><%= new Date(event.registered_at).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <p style="text-align: center; color: var(--text-secondary); padding: 2rem;">No events registered yet.</p>
    <% } %>
  </div>

  <!-- Surveys Filled Out -->
  <div class="card" style="margin-bottom: 2rem;">
    <h2 style="font-size: 1.5rem; margin-bottom: 1.5rem;">Survey Responses (<%= userSurveys.length %>)</h2>
    <% if (userSurveys.length > 0) { %>
      <div style="overflow-x: auto;">
        <table class="table">
          <thead>
            <tr>
              <th>Event</th>
              <th>Overall Score</th>
              <th>NPS Category</th>
              <th>Feedback</th>
              <th>Submitted</th>
            </tr>
          </thead>
          <tbody>
            <% userSurveys.forEach(survey => { %>
              <tr>
                <td><strong><%= survey.event_title %></strong></td>
                <td>
                  <% if (survey.overall_score) { %>
                    <span style="font-weight: 600;"><%= parseFloat(survey.overall_score).toFixed(2) %></span>
                    <span style="color: var(--text-secondary);">‚≠ê</span>
                  <% } else { %>
                    <em style="color: var(--text-secondary);">-</em>
                  <% } %>
                </td>
                <td>
                  <% if (survey.net_promoter_score === 'Promoter') { %>
                    <span class="badge badge-success">Promoter</span>
                  <% } else if (survey.net_promoter_score === 'Passive') { %>
                    <span class="badge" style="background-color: #fbbf24; color: #1a1a1a;">Passive</span>
                  <% } else if (survey.net_promoter_score === 'Detractor') { %>
                    <span class="badge badge-danger">Detractor</span>
                  <% } else { %>
                    <em style="color: var(--text-secondary);">-</em>
                  <% } %>
                </td>
                <td style="max-width: 300px;">
                  <% if (survey.additional_feedback) { %>
                    <%= survey.additional_feedback.substring(0, 100) %><%= survey.additional_feedback.length > 100 ? '...' : '' %>
                  <% } else { %>
                    <em style="color: var(--text-secondary);">No feedback</em>
                  <% } %>
                </td>
                <td>
                  <% if (survey.created_at) { %>
                    <%= new Date(survey.created_at).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' }) %>
                  <% } else { %>
                    <em style="color: var(--text-secondary);">-</em>
                  <% } %>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <p style="text-align: center; color: var(--text-secondary); padding: 2rem;">No surveys filled out yet.</p>
    <% } %>
  </div>

  <!-- Change Password Section -->
  <div class="card">
    <h2 style="font-size: 1.5rem; margin-bottom: 1rem;">Change Password</h2>
    <p style="color: var(--text-secondary); margin-bottom: 1.5rem;">
      Update this user's password. They will need to use the new password on their next login.
    </p>

    <% if (success) { %>
      <div class="alert alert-success" style="margin-bottom: 1.5rem;">
        <%= success %>
      </div>
    <% } %>

    <% if (error) { %>
      <div class="alert alert-error" style="margin-bottom: 1.5rem;">
        <%= error %>
      </div>
    <% } %>

    <form action="/admin/participants/<%= participant.id %>/change-password" method="POST" style="max-width: 500px;">
      <div class="form-group">
        <label for="newPassword" class="form-label">New Password</label>
        <input
          type="password"
          id="newPassword"
          name="newPassword"
          class="form-input"
          placeholder="Enter new password"
          required
          minlength="6"
        />
      </div>

      <div class="form-group">
        <label for="confirmPassword" class="form-label">Confirm Password</label>
        <input
          type="password"
          id="confirmPassword"
          name="confirmPassword"
          class="form-input"
          placeholder="Confirm new password"
          required
          minlength="6"
        />
      </div>

      <button type="submit" class="btn btn-primary">Update Password</button>
    </form>
  </div>
</div>

<%- include('../partials/footer') %>
