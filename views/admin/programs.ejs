<%- include('../partials/header') %>

<div class="container container-lg watercolor-sand" style="margin-top: 3rem; margin-bottom: 4rem;">
  <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
    <div>
      <h1 style="font-size: 2.5rem; margin-bottom: 0.5rem;">Programs Management</h1>
      <p style="color: var(--text-secondary); margin: 0;">
        View and manage all programs in the system.
      </p>
    </div>
    <a href="/admin/programs/new" class="btn btn-primary">+ Create New Program</a>
  </div>

  <% if (req.query.success) { %>
    <div class="alert alert-success" style="margin-bottom: 2rem;">
      <% if (req.query.success === 'created') { %>
        Program created successfully!
      <% } else if (req.query.success === 'updated') { %>
        Program updated successfully!
      <% } else if (req.query.success === 'deleted') { %>
        Program deleted successfully!
      <% } %>
    </div>
  <% } %>

  <% if (programs && programs.length > 0) { %>
    <div style="overflow-x: auto;">
      <table class="table">
        <thead>
          <tr>
            <th>Program Name</th>
            <th>Age Range</th>
            <th>Schedule</th>
            <th>Fee</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% programs.forEach(program => { %>
            <tr>
              <td><strong><%= program.title %></strong></td>
              <td><%= program.age_range || 'All ages' %></td>
              <td><%= program.schedule || 'TBD' %></td>
              <td><%= program.fee ? '$' + program.fee : 'Free' %></td>
              <td>
                <div style="display: flex; gap: 0.5rem;">
                  <a href="/programs/<%= program.id %>" class="btn btn-sm btn-secondary">View</a>
                  <a href="/admin/programs/<%= program.id %>/edit" class="btn btn-sm btn-primary">Edit</a>
                  <form action="/admin/programs/<%= program.id %>/delete" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this program?');">
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                  </form>
                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <div style="margin-top: 2rem; text-align: center; color: var(--text-secondary);">
      Total: <%= programs.length %> program<%= programs.length !== 1 ? 's' : '' %>
    </div>
  <% } else { %>
    <div class="card text-center" style="padding: 4rem 2rem;">
      <h3 style="color: var(--text-secondary);">No programs available.</h3>
    </div>
  <% } %>
</div>

<%- include('../partials/footer') %>
