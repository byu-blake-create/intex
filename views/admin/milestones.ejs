<%- include('../partials/header') %>

<div class="container container-lg watercolor-rose" style="margin-top: 3rem; margin-bottom: 4rem;">
  <h1 style="font-size: 2.5rem; margin-bottom: 1rem;"><%= t('admin.milestones.manage') %></h1>
  <p style="color: var(--text-secondary); margin-bottom: 2rem;">
    <%= t('admin.milestones.manage.copy') %>
  </p>

  <!-- Success/Error Messages -->
  <% if (req.query.success) { %>
    <div class="alert alert-success" style="margin-bottom: 2rem;">
      <% if (req.query.success === 'created') { %>
        Milestone category created successfully!
      <% } else if (req.query.success === 'updated') { %>
        Milestone category updated successfully!
      <% } else if (req.query.success === 'deleted') { %>
        Milestone category deleted successfully!
      <% } %>
    </div>
  <% } %>

  <% if (req.query.error) { %>
    <div class="alert alert-error" style="margin-bottom: 2rem;">
      <%= req.query.error %>
    </div>
  <% } %>

  <!-- Milestone Categories Management -->
  <div class="card" style="margin-bottom: 2rem;">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1rem;">
      <h3 style="margin: 0;">Milestone Categories</h3>
      <button type="button" class="btn btn-primary" onclick="document.getElementById('createMilestoneModal').style.display='block'">
        + Add Category
      </button>
    </div>
    <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(250px, 1fr)); gap: 1rem;">
      <% milestoneCategories.forEach(cat => { %>
        <div class="card" style="padding: 1rem; background-color: var(--sage-soft);">
          <h4 style="margin-bottom: 0.5rem; color: var(--text-color);"><%= cat.title %></h4>
          <p style="font-size: 0.9rem; color: var(--text-secondary); margin-bottom: 1rem;"><%= cat.description || 'No description' %></p>
          <div style="display: flex; gap: 0.5rem;">
            <button type="button" class="btn btn-sm btn-primary"
              onclick="openEditMilestoneModal('<%= cat.id %>', '<%= cat.title.replace(/'/g, "\\'") %>', '<%= (cat.description || '').replace(/'/g, "\\'").replace(/\n/g, "\\n") %>')">
              Edit
            </button>
            <form action="/admin/milestones/<%= cat.id %>/delete" method="POST" style="display: inline;" onsubmit="return confirm('Delete this milestone category? This will remove it for all participants.');">
              <button type="submit" class="btn btn-sm btn-danger">Delete</button>
            </form>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <!-- Search and Filter Form -->
  <div class="card" style="margin-bottom: 2rem;">
    <form method="GET" action="/admin/milestones">
      <div class="grid grid-2">
        <div class="form-group">
          <label for="search" class="form-label"><%= t('admin.participants.search.placeholder') %></label>
          <input
            type="text"
            id="search"
            name="search"
            class="form-input"
            placeholder="<%= t('admin.participants.search.placeholder') %>"
            value="<%= search %>"
          />
        </div>

        <div class="form-group">
          <label for="filter_milestone" class="form-label"><%= t('admin.milestones.filter') || 'Filter by Milestone' %></label>
          <select id="filter_milestone" name="filter_milestone" class="form-select">
            <option value=""><%= t('admin.participants.filter.all') || 'All Participants' %></option>
            <% milestoneCategories.forEach(cat => { %>
              <option value="<%= cat.id %>" <%= filter_milestone == cat.id ? 'selected' : '' %>>
                <%= t('admin.milestones.has') || 'Has' %> <%= cat.title %>
              </option>
            <% }) %>
          </select>
        </div>
      </div>

      <div style="display: flex; gap: 1rem; margin-top: 1rem;">
        <button type="submit" class="btn btn-primary"><%= t('admin.surveys.apply') %></button>
        <a href="/admin/milestones" class="btn btn-outline"><%= t('admin.surveys.clear') %></a>
      </div>
    </form>
  </div>

  <% if (users && users.length > 0) { %>
    <!-- Milestone Progress Table -->
    <div style="overflow-x: auto;">
      <table class="table" style="min-width: 1200px;">
        <thead>
          <tr>
            <th style="position: sticky; left: 0; background-color: var(--bg-primary); z-index: 10;"><%= t('admin.milestones.table.participant') %></th>
            <% milestoneCategories.forEach(category => { %>
              <th style="text-align: center; min-width: 100px; font-size: 0.85rem;">
                <%= category.title %>
              </th>
            <% }) %>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user => { %>
            <tr style="cursor: pointer;" onclick="window.location='/admin/milestones/user/<%= user.id %>';">
              <td style="position: sticky; left: 0; background-color: var(--bg-primary); z-index: 5;">
                <strong><%= user.name %></strong>
                <div style="font-size: 0.9rem; color: var(--text-secondary);"><%= user.email %></div>
              </td>
              <% milestoneCategories.forEach(category => { %>
                <td style="text-align: center;">
                  <% if (userAchievements[user.id] && userAchievements[user.id][category.id]) { %>
                    <span style="color: #10b981; font-size: 1.5rem;" title="Completed">✓</span>
                    <% if (userAchievements[user.id][category.id].length > 1) { %>
                      <div style="font-size: 0.75rem; color: var(--text-secondary);">
                        (<%= userAchievements[user.id][category.id].length %>)
                      </div>
                    <% } %>
                  <% } else { %>
                    <span style="color: var(--text-light); font-size: 1.5rem;">○</span>
                  <% } %>
                </td>
              <% }) %>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <div style="margin-top: 2rem; text-align: center; color: var(--text-secondary);">
      <%= t('admin.participants.total') || 'Showing' %> <%= users.length %> participant<%= users.length !== 1 ? 's' : '' %>
      <% if (search || filter_milestone) { %>
        (<%= t('admin.milestones.filtered') || 'filtered' %>)
      <% } %>
    </div>
  <% } else { %>
    <div class="card text-center" style="padding: 4rem 2rem;">
      <h3 style="color: var(--text-secondary);"><%= t('admin.participants.empty') %></h3>
      <% if (search || filter_milestone) { %>
        <p style="color: var(--text-light); margin-top: 1rem;"><%= t('admin.milestones.tryFilters') || 'Try adjusting your filters.' %></p>
        <a href="/admin/milestones" class="btn btn-outline" style="margin-top: 1rem;"><%= t('admin.surveys.clear') %></a>
      <% } else { %>
        <p style="color: var(--text-light); margin-top: 1rem;"><%= t('admin.milestones.waiting') || 'Participants will appear here once they register.' %></p>
      <% } %>
    </div>
  <% } %>

  <!-- Legend -->
  <div class="card" style="margin-top: 2rem; background-color: var(--sage-soft); color: var(--text-color);">
    <h3 style="margin-bottom: 1rem;"><%= t('admin.milestones.legend.title') || 'Legend' %></h3>
    <div style="display: flex; gap: 2rem; flex-wrap: wrap;">
      <div style="display: flex; align-items: center; gap: 0.5rem;">
        <span style="color: #10b981; font-size: 1.5rem;">✓</span>
        <span><%= t('admin.milestones.legend.achieved') || 'Milestone achieved' %></span>
      </div>
      <div style="display: flex; align-items: center; gap: 0.5rem;">
        <span style="color: var(--text-light); font-size: 1.5rem;">○</span>
        <span><%= t('admin.milestones.legend.notyet') || 'Not yet achieved' %></span>
      </div>
      <div style="display: flex; align-items: center; gap: 0.5rem;">
        <span style="font-size: 0.75rem; color: var(--text-secondary);">(2)</span>
        <span><%= t('admin.milestones.legend.multiple') || 'Number indicates multiple achievements in this category' %></span>
      </div>
    </div>
    <p style="margin-top: 1rem; color: var(--text-secondary); font-style: italic;">
      <%= t('admin.milestones.legend.tip') || 'Click on any participant row to view detailed milestone information.' %>
    </p>
  </div>
</div>

<!-- Create Milestone Modal -->
<div id="createMilestoneModal" role="dialog" aria-modal="true" aria-labelledby="createMilestoneTitle" style="display: none; position: fixed; z-index: 1000; left: 0; top: 0; width: 100%; height: 100%; background-color: rgba(0,0,0,0.5);">
  <div style="background-color: var(--bg-primary); margin: 5% auto; padding: 2rem; border-radius: var(--border-radius); max-width: 600px;">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem;">
      <h2 id="createMilestoneTitle">Create Milestone Category</h2>
      <button onclick="document.getElementById('createMilestoneModal').style.display='none'" aria-label="Close dialog" style="background: none; border: none; font-size: 1.5rem; cursor: pointer;">&times;</button>
    </div>
    <form action="/admin/milestones/create" method="POST" aria-label="Create milestone form">
      <div class="form-group">
        <label for="create_milestone_title" class="form-label">Title *</label>
        <input type="text" id="create_milestone_title" name="title" class="form-input" placeholder="e.g., First Event Attended" required>
      </div>
      <div class="form-group">
        <label for="create_milestone_description" class="form-label">Description</label>
        <textarea id="create_milestone_description" name="description" class="form-textarea" rows="3" placeholder="Optional description of this milestone"></textarea>
      </div>
      <div style="display: flex; gap: 1rem; margin-top: 1.5rem;">
        <button type="submit" class="btn btn-primary">Create Category</button>
        <button type="button" class="btn btn-outline" onclick="document.getElementById('createMilestoneModal').style.display='none'">Cancel</button>
      </div>
    </form>
  </div>
</div>

<!-- Edit Milestone Modal -->
<div id="editMilestoneModal" role="dialog" aria-modal="true" aria-labelledby="editMilestoneTitle" style="display: none; position: fixed; z-index: 1000; left: 0; top: 0; width: 100%; height: 100%; background-color: rgba(0,0,0,0.5);">
  <div style="background-color: var(--bg-primary); margin: 5% auto; padding: 2rem; border-radius: var(--border-radius); max-width: 600px;">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem;">
      <h2 id="editMilestoneTitle">Edit Milestone Category</h2>
      <button onclick="document.getElementById('editMilestoneModal').style.display='none'" aria-label="Close dialog" style="background: none; border: none; font-size: 1.5rem; cursor: pointer;">&times;</button>
    </div>
    <form id="editMilestoneForm" method="POST" aria-label="Edit milestone form">
      <div class="form-group">
        <label class="form-label">Title *</label>
        <input type="text" name="title" id="edit_milestone_title" class="form-input" required>
      </div>
      <div class="form-group">
        <label class="form-label">Description</label>
        <textarea name="description" id="edit_milestone_description" class="form-textarea" rows="3"></textarea>
      </div>
      <div style="display: flex; gap: 1rem; margin-top: 1.5rem;">
        <button type="submit" class="btn btn-primary">Update Category</button>
        <button type="button" class="btn btn-outline" onclick="document.getElementById('editMilestoneModal').style.display='none'">Cancel</button>
      </div>
    </form>
  </div>
</div>

<script>
function openEditMilestoneModal(id, title, description) {
  document.getElementById('editMilestoneForm').action = `/admin/milestones/${id}/edit`;
  document.getElementById('edit_milestone_title').value = title || '';
  document.getElementById('edit_milestone_description').value = description || '';
  document.getElementById('editMilestoneModal').style.display = 'block';
}

// Close modals when clicking outside
window.onclick = function(event) {
  if (event.target.id === 'createMilestoneModal') {
    document.getElementById('createMilestoneModal').style.display = 'none';
  }
  if (event.target.id === 'editMilestoneModal') {
    document.getElementById('editMilestoneModal').style.display = 'none';
  }
}
</script>

<%- include('../partials/footer') %>
