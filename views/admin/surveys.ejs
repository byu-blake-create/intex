<%- include('../partials/header') %>

<div class="container container-lg watercolor-duo" style="margin-top: 3rem; margin-bottom: 4rem;">
  <h1 style="font-size: 2.5rem; margin-bottom: 1rem;">Survey Responses</h1>
  <p style="color: var(--text-secondary); margin-bottom: 2rem;">
    View all survey feedback submitted by participants.
  </p>

  <!-- Search and Filter Form -->
  <div class="card" style="margin-bottom: 2rem;">
    <form method="GET" action="/admin/surveys">
      <div class="grid grid-3">
        <div class="form-group">
          <label for="search_event" class="form-label">Search by Event</label>
          <input
            type="text"
            id="search_event"
            name="search_event"
            class="form-input"
            placeholder="Event name..."
            value="<%= search_event %>"
          />
        </div>

        <div class="form-group">
          <label for="search_participant" class="form-label">Search by Participant</label>
          <input
            type="text"
            id="search_participant"
            name="search_participant"
            class="form-input"
            placeholder="Participant name..."
            value="<%= search_participant %>"
          />
        </div>

        <div class="form-group">
          <label for="filter_nps" class="form-label">Filter by NPS</label>
          <select id="filter_nps" name="filter_nps" class="form-select">
            <option value="">All Responses</option>
            <option value="Promoter" <%= filter_nps === 'Promoter' ? 'selected' : '' %>>Promoters Only</option>
            <option value="Passive" <%= filter_nps === 'Passive' ? 'selected' : '' %>>Passives Only</option>
            <option value="Detractor" <%= filter_nps === 'Detractor' ? 'selected' : '' %>>Detractors Only</option>
          </select>
        </div>
      </div>

      <div style="display: flex; gap: 1rem; align-items: end; margin-top: 1rem; flex-wrap: wrap;">
        <div class="form-group" style="flex: 1; min-width: 200px;">
          <label for="sort_by" class="form-label">Sort By</label>
          <select id="sort_by" name="sort_by" class="form-select">
            <option value="date" <%= sort_by === 'date' ? 'selected' : '' %>>Date</option>
            <option value="overall_score" <%= sort_by === 'overall_score' ? 'selected' : '' %>>Overall Score</option>
          </select>
        </div>

        <div class="form-group" style="flex: 1; min-width: 200px;">
          <label for="sort_order" class="form-label">Order</label>
          <select id="sort_order" name="sort_order" class="form-select">
            <option value="desc" <%= sort_order === 'desc' ? 'selected' : '' %>>Descending</option>
            <option value="asc" <%= sort_order === 'asc' ? 'selected' : '' %>>Ascending</option>
          </select>
        </div>

        <button type="submit" class="btn btn-primary">Apply Filters</button>
        <a href="/admin/surveys" class="btn btn-outline">Clear</a>
      </div>
    </form>
  </div>

  <% if (surveys && surveys.length > 0) { %>
    <div style="overflow-x: auto;">
      <table class="table">
        <thead>
          <tr>
            <th>Participant</th>
            <th>Event</th>
            <th>Overall Score</th>
            <th>Net Promoter Score</th>
            <th>Feedback</th>
            <th>Date</th>
          </tr>
        </thead>
        <tbody>
          <% surveys.forEach(survey => { %>
            <tr style="cursor: pointer;" onclick="window.location='/admin/surveys/<%= survey.id %>';">
              <td><strong><%= survey.user_name %></strong></td>
              <td><%= survey.event_title %></td>
              <td>
                <strong><%= survey.overall_score ? parseFloat(survey.overall_score).toFixed(2) : 'N/A' %></strong>
                <span style="color: var(--text-secondary); margin-left: 0.5rem;">
                  <%= survey.overall_score ? 'â­'.repeat(Math.round(parseFloat(survey.overall_score))) : '' %>
                </span>
              </td>
              <td>
                <% if (survey.net_promoter_score === 'Promoter') { %>
                  <span class="badge badge-success">Promoter</span>
                <% } else if (survey.net_promoter_score === 'Passive') { %>
                  <span class="badge" style="background-color: #fbbf24; color: #1a1a1a;">Passive</span>
                <% } else { %>
                  <span class="badge badge-danger">Detractor</span>
                <% } %>
              </td>
              <td style="max-width: 300px;">
                <% if (survey.additional_feedback) { %>
                  <%= survey.additional_feedback.substring(0, 100) %><%= survey.additional_feedback.length > 100 ? '...' : '' %>
                <% } else { %>
                  <em style="color: var(--text-light);">No feedback</em>
                <% } %>
              </td>
              <td style="white-space: nowrap;">
                <%= new Date(survey.created_at).toLocaleDateString('en-US', {
                  month: 'short',
                  day: 'numeric',
                  year: 'numeric'
                }) %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <div style="margin-top: 2rem; text-align: center; color: var(--text-secondary);">
      Total: <%= surveys.length %> survey response<%= surveys.length !== 1 ? 's' : '' %>
    </div>
  <% } else { %>
    <div class="card text-center" style="padding: 4rem 2rem;">
      <h3 style="color: var(--text-secondary);">No survey responses yet</h3>
      <p style="color: var(--text-light); margin-top: 1rem;">Survey responses will appear here once participants submit feedback.</p>
    </div>
  <% } %>
</div>

<%- include('../partials/footer') %>
