<%- include('../partials/header') %>

<div class="container container-lg" style="margin-top: 3rem; margin-bottom: 4rem;">
  <h1 style="font-size: 2.5rem; margin-bottom: 1rem;">Survey Responses</h1>
  <p style="color: var(--text-secondary); margin-bottom: 2rem;">
    View all survey feedback submitted by participants.
  </p>

  <% if (surveys && surveys.length > 0) { %>
    <div style="overflow-x: auto;">
      <table class="table">
        <thead>
          <tr>
            <th>Participant</th>
            <th>Event</th>
            <th>Overall Score</th>
            <th>Net Promoter Score</th>
            <th>Feedback</th>
            <th>Date</th>
          </tr>
        </thead>
        <tbody>
          <% surveys.forEach(survey => { %>
            <tr style="cursor: pointer;" onclick="window.location='/admin/surveys/<%= survey.id %>';">
              <td><strong><%= survey.user_name %></strong></td>
              <td><%= survey.event_title %></td>
              <td>
                <strong><%= survey.overall_score ? parseFloat(survey.overall_score).toFixed(2) : 'N/A' %></strong>
                <span style="color: var(--text-secondary); margin-left: 0.5rem;">
                  <%= survey.overall_score ? 'â­'.repeat(Math.round(parseFloat(survey.overall_score))) : '' %>
                </span>
              </td>
              <td>
                <% if (survey.net_promoter_score === 'Promoter') { %>
                  <span class="badge badge-success">Promoter</span>
                <% } else if (survey.net_promoter_score === 'Passive') { %>
                  <span class="badge" style="background-color: #fbbf24; color: #1a1a1a;">Passive</span>
                <% } else { %>
                  <span class="badge badge-danger">Detractor</span>
                <% } %>
              </td>
              <td style="max-width: 300px;">
                <% if (survey.additional_feedback) { %>
                  <%= survey.additional_feedback.substring(0, 100) %><%= survey.additional_feedback.length > 100 ? '...' : '' %>
                <% } else { %>
                  <em style="color: var(--text-light);">No feedback</em>
                <% } %>
              </td>
              <td style="white-space: nowrap;">
                <%= new Date(survey.created_at).toLocaleDateString('en-US', {
                  month: 'short',
                  day: 'numeric',
                  year: 'numeric'
                }) %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <div style="margin-top: 2rem; text-align: center; color: var(--text-secondary);">
      Total: <%= surveys.length %> survey response<%= surveys.length !== 1 ? 's' : '' %>
    </div>
  <% } else { %>
    <div class="card text-center" style="padding: 4rem 2rem;">
      <h3 style="color: var(--text-secondary);">No survey responses yet</h3>
      <p style="color: var(--text-light); margin-top: 1rem;">Survey responses will appear here once participants submit feedback.</p>
    </div>
  <% } %>
</div>

<%- include('../partials/footer') %>
