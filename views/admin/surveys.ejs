<%- include('../partials/header') %>

<div class="container container-lg watercolor-butterfly" style="margin-top: 3rem; margin-bottom: 4rem;">
  <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1rem; flex-wrap: wrap; gap: 1rem;">
    <div>
      <h1 style="font-size: 2.5rem; margin-bottom: 0.5rem;"><%= t('admin.surveys.manage') %></h1>
      <p style="color: var(--text-secondary); margin: 0;">
        <%= t('admin.surveys.manage.copy') %>
      </p>
    </div>
    <div style="display: flex; gap: 0.5rem; flex-wrap: wrap;">
      <a href="/admin/surveys/export/csv" class="btn btn-outline" title="Export to CSV">
        üìä Export CSV
      </a>
      <a href="/admin/surveys/export/pdf" class="btn btn-outline" title="Export to PDF">
        üìÑ Export PDF
      </a>
      <button type="button" id="open-surveys-dashboard" class="btn btn-outline" title="View Survey Dashboard">
        üìà View Dashboard
      </button>
      <a href="/admin/surveys/new/survey" class="btn btn-primary">+ Create New Survey</a>
    </div>
  </div>

  <% if (req.query.success) { %>
    <div class="alert alert-success" style="margin-bottom: 2rem; margin-top: 1rem;">
      <% if (req.query.success === 'created') { %>
        Survey created successfully!
      <% } else if (req.query.success === 'updated') { %>
        Survey updated successfully!
      <% } else if (req.query.success === 'deleted') { %>
        Survey deleted successfully!
      <% } %>
    </div>
  <% } %>

  <!-- Search and Filter Form -->
  <div class="card" style="margin-bottom: 2rem;">
    <form method="GET" action="/admin/surveys">
      <div class="grid grid-3">
        <div class="form-group">
          <label for="search_event" class="form-label"><%= t('admin.surveys.filter.event') %></label>
          <input
            type="text"
            id="search_event"
            name="search_event"
            class="form-input"
            placeholder="<%= t('admin.surveys.filter.event') %>..."
            value="<%= search_event %>"
          />
        </div>

        <div class="form-group">
          <label for="search_participant" class="form-label"><%= t('admin.surveys.filter.participant') %></label>
          <input
            type="text"
            id="search_participant"
            name="search_participant"
            class="form-input"
            placeholder="<%= t('admin.surveys.filter.participant') %>..."
            value="<%= search_participant %>"
          />
        </div>

        <div class="form-group">
          <label for="filter_nps" class="form-label"><%= t('admin.surveys.filter.nps') %></label>
          <select id="filter_nps" name="filter_nps" class="form-select">
            <option value=""><%= t('admin.surveys.filter.nps.all') %></option>
            <option value="Promoter" <%= filter_nps === 'Promoter' ? 'selected' : '' %>><%= t('admin.surveys.filter.nps.promoter') %></option>
            <option value="Passive" <%= filter_nps === 'Passive' ? 'selected' : '' %>><%= t('admin.surveys.filter.nps.passive') %></option>
            <option value="Detractor" <%= filter_nps === 'Detractor' ? 'selected' : '' %>><%= t('admin.surveys.filter.nps.detractor') %></option>
          </select>
        </div>
      </div>

      <div style="display: flex; gap: 1rem; align-items: end; margin-top: 1rem; flex-wrap: wrap;">
        <div class="form-group" style="flex: 1; min-width: 200px;">
          <label for="sort_by" class="form-label"><%= t('admin.surveys.sort.by') %></label>
          <select id="sort_by" name="sort_by" class="form-select">
            <option value="date" <%= sort_by === 'date' ? 'selected' : '' %>><%= t('admin.surveys.sort.by.date') %></option>
            <option value="overall_score" <%= sort_by === 'overall_score' ? 'selected' : '' %>><%= t('admin.surveys.sort.by.score') %></option>
          </select>
        </div>

        <div class="form-group" style="flex: 1; min-width: 200px;">
          <label for="sort_order" class="form-label"><%= t('admin.surveys.sort.order') %></label>
          <select id="sort_order" name="sort_order" class="form-select">
            <option value="desc" <%= sort_order === 'desc' ? 'selected' : '' %>><%= t('admin.surveys.sort.order.desc') %></option>
            <option value="asc" <%= sort_order === 'asc' ? 'selected' : '' %>><%= t('admin.surveys.sort.order.asc') %></option>
          </select>
        </div>

        <button type="submit" class="btn btn-primary"><%= t('admin.surveys.apply') %></button>
        <a href="/admin/surveys" class="btn btn-outline"><%= t('admin.surveys.clear') %></a>
      </div>
    </form>
  </div>

  <% if (surveys && surveys.length > 0) { %>
    <div style="overflow-x: auto;">
      <table class="table">
        <thead>
          <tr>
            <th><%= t('admin.surveys.table.participant') %></th>
            <th><%= t('admin.surveys.table.event') %></th>
            <th><%= t('admin.surveys.table.overall') %></th>
            <th><%= t('admin.surveys.table.nps') %></th>
            <th><%= t('admin.surveys.table.feedback') %></th>
            <th><%= t('admin.surveys.table.date') %></th>
          </tr>
        </thead>
        <tbody>
          <% surveys.forEach(survey => { %>
            <tr style="cursor: pointer;" onclick="window.location='/admin/surveys/<%= survey.id %>';">
              <td><strong><%= survey.user_name %></strong></td>
              <td><%= survey.event_title %></td>
              <td>
                <strong><%= survey.overall_score ? parseFloat(survey.overall_score).toFixed(2) : 'N/A' %></strong>
                <span style="color: var(--text-secondary); margin-left: 0.5rem;">
                  <%= survey.overall_score ? '‚≠ê'.repeat(Math.round(parseFloat(survey.overall_score))) : '' %>
                </span>
              </td>
              <td>
                <% if (survey.net_promoter_score === 'Promoter') { %>
                  <span class="badge badge-success"><%= t('admin.surveys.nps.promoter') %></span>
                <% } else if (survey.net_promoter_score === 'Passive') { %>
                  <span class="badge" style="background-color: #fbbf24; color: #1a1a1a;"><%= t('admin.surveys.nps.passive') %></span>
                <% } else { %>
                  <span class="badge badge-danger"><%= t('admin.surveys.nps.detractor') %></span>
                <% } %>
              </td>
              <td style="max-width: 300px;">
                <% if (survey.additional_feedback) { %>
                  <%= survey.additional_feedback.substring(0, 100) %><%= survey.additional_feedback.length > 100 ? '...' : '' %>
                <% } else { %>
                  <em style="color: var(--text-light);"><%= t('admin.surveys.feedback.none') %></em>
                <% } %>
              </td>
              <td style="white-space: nowrap;">
                <%= new Date(survey.created_at).toLocaleDateString('en-US', {
                  month: 'short',
                  day: 'numeric',
                  year: 'numeric'
                }) %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <!-- Pagination Controls -->
    <% if (totalPages > 1) { %>
      <%
        const buildQueryString = (page) => {
          const params = new URLSearchParams();
          params.set('page', page);
          if (search_event) params.set('search_event', search_event);
          if (search_participant) params.set('search_participant', search_participant);
          if (sort_by) params.set('sort_by', sort_by);
          if (sort_order) params.set('sort_order', sort_order);
          if (filter_nps) params.set('filter_nps', filter_nps);
          return '?' + params.toString();
        };
      %>
      <div style="margin-top: 2rem; display: flex; justify-content: center; align-items: center; gap: 0.5rem; flex-wrap: wrap;">
        <% if (currentPage > 1) { %>
          <a href="/admin/surveys<%= buildQueryString(currentPage - 1) %>" class="btn btn-sm btn-outline">‚Üê Previous</a>
        <% } %>

        <%
          const maxVisible = 7;
          let startPage = Math.max(1, currentPage - Math.floor(maxVisible / 2));
          let endPage = Math.min(totalPages, startPage + maxVisible - 1);
          if (endPage - startPage < maxVisible - 1) {
            startPage = Math.max(1, endPage - maxVisible + 1);
          }
        %>

        <% if (startPage > 1) { %>
          <a href="/admin/surveys<%= buildQueryString(1) %>" class="btn btn-sm btn-outline">1</a>
          <% if (startPage > 2) { %>
            <span style="padding: 0 0.5rem;">...</span>
          <% } %>
        <% } %>

        <% for (let i = startPage; i <= endPage; i++) { %>
          <% if (i === currentPage) { %>
            <span class="btn btn-sm btn-primary" style="pointer-events: none;"><%= i %></span>
          <% } else { %>
            <a href="/admin/surveys<%= buildQueryString(i) %>" class="btn btn-sm btn-outline"><%= i %></a>
          <% } %>
        <% } %>

        <% if (endPage < totalPages) { %>
          <% if (endPage < totalPages - 1) { %>
            <span style="padding: 0 0.5rem;">...</span>
          <% } %>
          <a href="/admin/surveys<%= buildQueryString(totalPages) %>" class="btn btn-sm btn-outline"><%= totalPages %></a>
        <% } %>

        <% if (currentPage < totalPages) { %>
          <a href="/admin/surveys<%= buildQueryString(currentPage + 1) %>" class="btn btn-sm btn-outline">Next ‚Üí</a>
        <% } %>
      </div>
    <% } %>

    <div style="margin-top: 1rem; text-align: center; color: var(--text-secondary);">
      <% if (typeof totalRecords !== 'undefined' && totalPages > 1) { %>
        Showing page <%= currentPage %> of <%= totalPages %> (<%= totalRecords %> total survey responses)
      <% } else { %>
        <%= t('admin.surveys.total') %>: <%= surveys.length %> survey response<%= surveys.length !== 1 ? 's' : '' %>
      <% } %>
    </div>
  <% } else { %>
    <div class="card text-center" style="padding: 4rem 2rem;">
      <h3 style="color: var(--text-secondary);"><%= t('admin.surveys.empty') %></h3>
      <p style="color: var(--text-light); margin-top: 1rem;"><%= t('admin.surveys.empty.copy') %></p>
    </div>
  <% } %>
</div>

<div id="surveys-dashboard-modal" class="modal-overlay" style="display: none; position: fixed; inset: 0; background: rgba(0,0,0,0.65); z-index: 9999; align-items: center; justify-content: center; padding: 1rem;">
  <div class="card" style="position: relative; width: min(1100px, 100%); max-height: 90vh; overflow: auto; padding: 1.5rem;">
    <button type="button" id="close-surveys-dashboard" aria-label="Close dashboard" style="position: absolute; top: 0.75rem; right: 0.75rem; background: transparent; border: none; font-size: 1.5rem; cursor: pointer; color: var(--text-secondary);">√ó</button>
    <h2 style="margin-bottom: 1rem;">Survey Responses Dashboard</h2>
    <div class='tableauPlaceholder' id='viz1764871289489' style='position: relative'>
      <noscript>
        <a href='#'>
          <img alt='Dashboard 1 ' src='https://public.tableau.com/static/images/Su/SurveyNPSDashboard/Dashboard1/1_rss.png' style='border: none' />
        </a>
      </noscript>
      <object class='tableauViz' style='display:none;'>
        <param name='host_url' value='https%3A%2F%2Fpublic.tableau.com%2F' />
        <param name='embed_code_version' value='3' />
        <param name='site_root' value='' />
        <param name='name' value='SurveyNPSDashboard/Dashboard1' />
        <param name='tabs' value='no' />
        <param name='toolbar' value='yes' />
        <param name='static_image' value='https://public.tableau.com/static/images/Su/SurveyNPSDashboard/Dashboard1/1.png' />
        <param name='animate_transition' value='yes' />
        <param name='display_static_image' value='yes' />
        <param name='display_spinner' value='yes' />
        <param name='display_overlay' value='yes' />
        <param name='display_count' value='yes' />
        <param name='language' value='en-US' />
      </object>
    </div>
  </div>
</div>

<script type='text/javascript'>
  (function () {
    var modal = document.getElementById('surveys-dashboard-modal');
    var openBtn = document.getElementById('open-surveys-dashboard');
    var closeBtn = document.getElementById('close-surveys-dashboard');
    var tableauInitialized = false;

    function openModal() {
      modal.style.display = 'flex';
      if (!tableauInitialized) {
        tableauInitialized = true;
        var divElement = document.getElementById('viz1764871289489');
        var vizElement = divElement.getElementsByTagName('object')[0];
        if (divElement.offsetWidth > 800) {
          vizElement.style.width = '1000px';
          vizElement.style.height = '827px';
        } else if (divElement.offsetWidth > 500) {
          vizElement.style.width = '1000px';
          vizElement.style.height = '827px';
        } else {
          vizElement.style.width = '100%';
          vizElement.style.height = '1277px';
        }
        var scriptElement = document.createElement('script');
        scriptElement.src = 'https://public.tableau.com/javascripts/api/viz_v1.js';
        vizElement.parentNode.insertBefore(scriptElement, vizElement);
      }
    }

    function closeModal() {
      modal.style.display = 'none';
    }

    openBtn && openBtn.addEventListener('click', openModal);
    closeBtn && closeBtn.addEventListener('click', closeModal);
    modal && modal.addEventListener('click', function (event) {
      if (event.target === modal) closeModal();
    });
  })();
</script>

<%- include('../partials/footer') %>
