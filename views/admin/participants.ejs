<%- include('../partials/header') %>

<div class="container container-lg watercolor-left" style="margin-top: 3rem; margin-bottom: 4rem;">
  <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem; flex-wrap: wrap; gap: 1rem;">
    <div>
      <h1 style="font-size: 2.5rem; margin-bottom: 0.5rem;"><%= t('admin.participants.manage') %></h1>
      <p style="color: var(--text-secondary); margin: 0;">
        <%= t('admin.participants.manage.copy') %>
      </p>
    </div>
    <div style="display: flex; gap: 0.5rem; flex-wrap: wrap;">
      <a href="/admin/participants/export/csv<%= search ? '?search=' + encodeURIComponent(search) : '' %>" class="btn btn-outline" title="Export to CSV">
        üìä Export CSV
      </a>
      <a href="/admin/participants/export/pdf<%= search ? '?search=' + encodeURIComponent(search) : '' %>" class="btn btn-outline" title="Export to PDF">
        üìÑ Export PDF
      </a>
      <a href="/admin/participants/new/user" class="btn btn-primary">+ Create New User</a>
    </div>
  </div>

  <% if (req.query.success) { %>
    <div class="alert alert-success" style="margin-bottom: 2rem;">
      <% if (req.query.success === 'created') { %>
        User created successfully!
      <% } else if (req.query.success === 'updated') { %>
        User updated successfully!
      <% } else if (req.query.success === 'deleted') { %>
        User deleted successfully!
      <% } %>
    </div>
  <% } %>

  <% if (req.query.error) { %>
    <div class="alert alert-error" style="margin-bottom: 2rem;">
      <% if (req.query.error === 'cannot_delete_self') { %>
        You cannot delete your own account.
      <% } else if (req.query.error === 'delete_failed') { %>
        Error deleting user. Please try again.
      <% } else { %>
        <%= req.query.error %>
      <% } %>
    </div>
  <% } %>

  <!-- Search Bar -->
  <form action="/admin/participants" method="GET" class="search-bar">
    <input
      type="text"
      name="search"
      class="search-input"
      placeholder="<%= t('admin.participants.search.placeholder') %>"
      value="<%= search %>"
    />
    <button type="submit" class="btn btn-primary"><%= t('admin.participants.search') %></button>
    <% if (search) { %>
      <a href="/admin/participants" class="btn btn-outline"><%= t('admin.participants.clear') %></a>
    <% } %>
  </form>

  <!-- Users Table -->
  <% if (users && users.length > 0) { %>
    <div style="overflow-x: auto;">
      <table class="table">
        <thead>
          <tr>
            <th><%= t('admin.participants.table.name') %></th>
            <th><%= t('admin.participants.table.email') %></th>
            <th><%= t('admin.participants.table.role') %></th>
            <th>Total Donations</th>
            <th><%= t('admin.participants.table.logins') %></th>
            <th><%= t('admin.participants.table.actions') %></th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user => { %>
            <tr>
              <td><strong><%= user.name %></strong></td>
              <td><%= user.email %></td>
              <td>
                <% if (user.role === 'admin') { %>
                  <span class="badge badge-danger">Admin</span>
                <% } else { %>
                  <span class="badge badge-primary">User</span>
                <% } %>
              </td>
              <td>
                <% if (user.total_donations && parseFloat(user.total_donations) > 0) { %>
                  <span style="color: var(--success-color); font-weight: 600;">$<%= parseFloat(user.total_donations).toFixed(2) %></span>
                <% } else { %>
                  <span style="color: var(--text-light);">$0.00</span>
                <% } %>
              </td>
              <td><%= user.login_count || 0 %> logins</td>
              <td>
                <div style="display: flex; gap: 0.5rem; flex-wrap: wrap;">
                  <a href="/admin/participants/<%= user.id %>" class="btn btn-sm btn-secondary">
                    <%= t('admin.participants.table.view') %>
                  </a>
                  <a href="/admin/participants/<%= user.id %>/edit" class="btn btn-sm btn-primary">Edit</a>
                  <form action="/admin/participants/<%= user.id %>/delete" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this user? This action cannot be undone.');">
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                  </form>
                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <!-- Pagination Controls -->
    <% if (totalPages > 1) { %>
      <div style="margin-top: 2rem; display: flex; justify-content: center; align-items: center; gap: 0.5rem; flex-wrap: wrap;">
        <% if (currentPage > 1) { %>
          <a href="/admin/participants?page=<%= currentPage - 1 %><%= search ? '&search=' + encodeURIComponent(search) : '' %>" class="btn btn-sm btn-outline">‚Üê Previous</a>
        <% } %>

        <%
          const maxVisible = 7;
          let startPage = Math.max(1, currentPage - Math.floor(maxVisible / 2));
          let endPage = Math.min(totalPages, startPage + maxVisible - 1);
          if (endPage - startPage < maxVisible - 1) {
            startPage = Math.max(1, endPage - maxVisible + 1);
          }
        %>

        <% if (startPage > 1) { %>
          <a href="/admin/participants?page=1<%= search ? '&search=' + encodeURIComponent(search) : '' %>" class="btn btn-sm btn-outline">1</a>
          <% if (startPage > 2) { %>
            <span style="padding: 0 0.5rem;">...</span>
          <% } %>
        <% } %>

        <% for (let i = startPage; i <= endPage; i++) { %>
          <% if (i === currentPage) { %>
            <span class="btn btn-sm btn-primary" style="pointer-events: none;"><%= i %></span>
          <% } else { %>
            <a href="/admin/participants?page=<%= i %><%= search ? '&search=' + encodeURIComponent(search) : '' %>" class="btn btn-sm btn-outline"><%= i %></a>
          <% } %>
        <% } %>

        <% if (endPage < totalPages) { %>
          <% if (endPage < totalPages - 1) { %>
            <span style="padding: 0 0.5rem;">...</span>
          <% } %>
          <a href="/admin/participants?page=<%= totalPages %><%= search ? '&search=' + encodeURIComponent(search) : '' %>" class="btn btn-sm btn-outline"><%= totalPages %></a>
        <% } %>

        <% if (currentPage < totalPages) { %>
          <a href="/admin/participants?page=<%= currentPage + 1 %><%= search ? '&search=' + encodeURIComponent(search) : '' %>" class="btn btn-sm btn-outline">Next ‚Üí</a>
        <% } %>
      </div>
    <% } %>

    <div style="margin-top: 1rem; text-align: center; color: var(--text-secondary);">
      <% if (typeof totalRecords !== 'undefined' && totalPages > 1) { %>
        Showing page <%= currentPage %> of <%= totalPages %> (<%= totalRecords %> total participants)
      <% } else { %>
        <%= t('admin.participants.total') || 'Showing' %> <%= users.length %> participant<%= users.length !== 1 ? 's' : '' %>
      <% } %>
      <% if (search) { %>
        <%= t('admin.participants.matching') || 'matching' %> "<%= search %>"
      <% } %>
    </div>
  <% } else { %>
    <div class="card text-center" style="padding: 4rem 2rem;">
      <h3 style="color: var(--text-secondary);">
        <% if (search) { %>
          <%= t('admin.participants.empty.search') %> "<%= search %>"
        <% } else { %>
          <%= t('admin.participants.empty') %>
        <% } %>
      </h3>
      <% if (search) { %>
        <a href="/admin/participants" class="btn btn-primary" style="margin-top: 1rem;"><%= t('admin.participants.viewAll') %></a>
      <% } %>
    </div>
  <% } %>
</div>

<%- include('../partials/footer') %>
