<%- include('../partials/header') %>

<div class="container watercolor-green" style="margin-top: 3rem; margin-bottom: 4rem;">
  <h1 style="font-size: 2.5rem; margin-bottom: 1rem;"><%= t('events.list.title') %></h1>
  <p style="font-size: 1.1rem; color: var(--text-secondary); margin-bottom: 3rem;">
    <%= t('events.list.copy') %>
  </p>

  <% if (events && events.length > 0) { %>
    <div class="grid grid-2">
      <% events.forEach(event => { %>
        <div class="card">
          <% if (event.image_url) { %>
            <img src="<%= event.image_url %>" alt="<%= event.title %>" style="width: 100%; height: 200px; object-fit: cover; border-radius: var(--border-radius) var(--border-radius) 0 0; margin: -1.5rem -1.5rem 1.5rem -1.5rem;">
          <% } %>
          <div class="card-title"><%= event.title %></div>
          <div style="margin-bottom: 1rem;">
            <span class="badge badge-primary">
              <%= new Date(event.date).toLocaleDateString(locale, { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %>
            </span>
          </div>
          <p class="card-text">
            <%= event.description ? event.description.substring(0, 150) + '...' : 'Join us for this exciting event!' %>
          </p>
          <div style="display: flex; gap: 1rem; align-items: center; margin-top: 1rem; color: var(--text-secondary); font-size: 0.9rem;">
            <span>üìç <%= event.location || t('events.list.location') %></span>
            <% if (event.capacity) { %>
              <span>üë• <%= t('events.list.capacity') %>: <%= event.capacity %></span>
            <% } %>
          </div>
          <div class="card-footer">
            <a href="/events/<%= event.id %>" class="btn btn-primary btn-block">
              <%= t('events.list.cta') %>
            </a>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <div class="card text-center" style="padding: 4rem 2rem;">
      <h2 style="color: var(--text-secondary); margin-bottom: 1rem;"><%= t('events.list.empty.title') %></h2>
      <p style="color: var(--text-light);"><%= t('events.list.empty.copy') %></p>
    </div>
  <% } %>
</div>

<%- include('../partials/footer') %>
